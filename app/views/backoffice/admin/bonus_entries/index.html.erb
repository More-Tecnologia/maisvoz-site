<!-- Page-Title -->
<div class="row">
  <div class="col-sm-12">
    <h4 class="page-title"><%= t('.title') %></h4>
    <p class="text-muted page-title-alt"><%= t('.subtitle') %></p>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <div class="card-box">
      <div class="row">
        <%= form_tag backoffice_admin_bonus_entries_path, method: :get do %>
          <div class="col-md-4 form-group">
            <label for="">Username:</label>
            <%= text_field_tag :username, params[:username], class: 'form-control' %>
          </div>
          <div class="col-md-4 form-group">
            <label for="">Tipo de bônus:</label>
            <%= select_tag(:bonus_kind, options_for_select(FinancialTypes::BONUS_KINDS.map {|k| [t(k), k]}, params[:bonus_kind]), include_blank: 'Todos', :onchange => "this.form.submit();", class: 'form-control') %>
          </div>
          <div class="col-md-4 form-group">
              <div class="row">
                <div class="col-md-4">
                  <label>Gerado de:</label>
                  <%= text_field_tag :created_at_gteq, params[:gteq], class: 'form-control', data: { provide: 'datepicker' } %>
                </div>
                <div class="col-md-4">
                  <label>Gerado até:</label>
                  <%= text_field_tag :created_at_lteq, params[:lteq], class: 'form-control', data: { provide: 'datepicker' } %>
                </div>
              </div>
          </div>
          <div class="col-md-12 m-b-30">
            <%= submit_tag 'Filtrar', class: 'btn btn-primary' %>
          </div>
        <% end %>
      </div>
      <div class="row">
        <div class="col-lg-12">
          <table class="table table-striped table-bordered toggle-circle m-b-0">

            <thead>
              <tr>
                <th>#</th>
                <th><%= FinancialEntry.human_attribute_name(:from_user) %></th>
                <th><%= FinancialEntry.human_attribute_name(:to_user) %></th>
                <th><%= FinancialEntry.human_attribute_name(:kind) %></th>
                <th><%= FinancialEntry.human_attribute_name(:amount) %></th>
                <th><%= FinancialEntry.human_attribute_name(:created_at) %></th>
              </tr>
            </thead>
            <tbody>
              <% bonus_entries.each do |bonus_entry| %>
                <tr>
                  <th><%= bonus_entry.id %></th>
                  <td><%= bonus_entry.order.user.username if bonus_entry.order %></td>
                  <td><%= bonus_entry.user.username %></td>
                  <td><%= t bonus_entry.kind %></td>
                  <td><%= number_to_currency bonus_entry.amount %></td>
                  <td><%= l bonus_entry.created_at, format: :short %></td>
                </tr>
              <% end %>
              <% if bonus_entries.empty? %>
                <tr>
                  <td colspan="7" class="text-center"><%= t('.no_data') %></td>
                </tr>
              <% end %>
            </tbody>
          </table>

          <%= paginate bonus_entries %>

        </div>
      </div>
    </div>
  </div>
</div>
