<%= simple_form_for(form, url: url, method: method, html: { class: 'form-horizontal' }) do |f| %>

  <%= f.input :name %>
  <%= f.input :qualifying_score %>
  <%= f.input :requalification_score %>
  <%= f.input :bonus %>
  <%= f.input :binary_limit %>
  <%= f.input :binary_percentage %>
  <%= f.input :kind, collection: Career.kinds.map { |k,v| [t(k), k] } %>
  <%= f.input :career_id, collection: careers_for_select,
                          selected: find_binary_qualifying_career(f.object.career_id),
                          include_blank: true %>
  <%= f.input :unilevel_qualifying_career_id,
               collection: careers_for_select,
               selected: find_unilevel_qualifying_career(f.object.unilevel_qualifying_career_id),
               include_blank: true %>
 <%= f.input :unilevel_qualifying_career_count, collection: (0..20).to_a %>
 <%= f.input :lineage_score %>
 <%= f.input :image_path %>

  <%= f.button :button, t("defaults.#{method}"), data: { disable_with: "<i class='fa fa-spinner fa-spin'></i> Saving...".html_safe } %>
<% end %>
