<div class="content-page">
  <!-- Start content -->
  <div class="content">
    <div class="container">

      <!-- Page-Title -->
      <div class="row">
        <div class="col-sm-12">
          <h4 class="page-title"><%= t('views.backoffice.careers.edit.title', career: career.name) %></h4>
          <p class="text-muted page-title-alt"><%= t('views.backoffice.careers.edit.subtitle') %></p>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-12">
          <div class="card-box">
            <div class="row">
              <div class="col-lg-12">
                <div class="p-20">
                  <%= render partial: 'form', locals: { form: form, career: career, url: backoffice_admin_career_path(career), method: :put } %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>
