<div class="row">
  <div class="col-sm-12">
    <h4 class="page-title"><%= t('views.backoffice.categories.index.title') %></h4>
    <p class="text-muted page-title-alt"></p>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <div class="card-box">
      <div class="row">
        <div class="col-lg-12">

          <div class="m-b-20">
            <%= link_to new_backoffice_admin_categorization_path, class: 'btn btn-primary waves-effect waves-light' do %>
              <i class="md md-add"></i> <%= t('views.backoffice.categories.index.new_category') %>
            <% end %>
          </div>

          <div class="table-responsive">

            <table class="table table-bordered m-0">

              <thead>
                <tr>
                  <th>#</th>
                  <th><%= t(:title) %></th>
                  <th><%= t(:tag) %></th>
                  <th><%= t(:active) %></th>
                  <th><%= t(:actions) %></th>
                </tr>
              </thead>
              <tbody>
                <% @categorizations.each do |categorization| %>
                  <tr>
                    <th><%= categorization.id %></th>
                    <td><%= categorization.title %></td>
                    <td><%= categorization.tag %></td>
                    <td><%= t(categorization.active?) %></td>
                    <td>
                      <%= link_to edit_backoffice_admin_categorization_path(categorization), class: 'action-edit' do %>
                        <i class="fas fa-edit"></i>
                      <% end %>
                      <%= link_to(
                        backoffice_admin_categorization_path(categorization),
                        class: 'action-remove',
                        method: :delete,
                        data: { confirm: t('defaults.confirm_removal') }
                        ) do %>
                        <i class="fas fa-trash"></i>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
                <% if @categorizations.empty? %>
                  <tr>
                    <td colspan="5" class="text-center"><%= t('views.backoffice.categories.index.no_data') %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
