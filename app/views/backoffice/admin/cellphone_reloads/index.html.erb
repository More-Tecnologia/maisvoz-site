<!-- Page-Title -->
<div class="row">
  <div class="col-sm-12 m-b-23">
    <h4 class="page-title"><%= t('defaults.cellphone_reloads').pluralize %></h4>
  </div>
</div>

<%= render 'backoffice/admin/cellphone_reloads/filters' %>

<div class="row">
  <div class="col-sm-12">
    <div class="card-box">
      <div class="row">
        <p><strong> <%= t('attributes.quantity') %>: &nbsp;&nbsp;</strong><%= @cellphone_reloads.count %> </p>
      </div>
      <div class="row">
        <div class="col-lg-12">
          <div class="table-responsive">
          <table class="table table-striped table-bordered m-0">
            <thead>
              <tr>
                <th> <%= OrderItem.human_attribute_name(:item) %> </th>
                <th> <%= CellphoneReloadForm.human_attribute_name(:value) %> </th>
                <th> <%= CellphoneReloadForm.human_attribute_name(:created_at) %> </th>
                <th> <%= CellphoneReloadForm.human_attribute_name(:cellphone_number) %> </th>
                <th> <%= OrderItem.human_attribute_name(:user) %> </th>
                <th> <%= OrderItem.human_attribute_name(:order_id) %> </th>
                <th> <%= OrderItem.human_attribute_name(:processed_at) %> </th>
              </tr>
            </thead>
            <tbody>
              <% @cellphone_reloads.each do |order_item| %>
                <tr>
                  <td> <%= order_item.try(:hashid) %> </td>
                  <td> <%= number_to_currency(order_item.total_cents / 100.0) %> </td>
                  <td> <%= l(order_item.created_at, format: :short) if order_item.created_at %> </td>
                  <td> <%= order_item.cellphone_number %> </td>
                  <td> <%= order_item.try(:order).try(:user).try(:username) %> </td>
                  <td> <%= link_to(order_item.try(:order).try(:hashid), backoffice_admin_order_path(order_item.order)) if order_item.order %> </td>
                  <td> <%= l(order_item.processed_at, format: :short) if order_item.processed_at %> </td>
              <% end %>
              <% if @cellphone_reloads.empty? %>
                <tr>
                  <td colspan="10" class="text-center"><%= t('views.backoffice.orders.index.no_data') %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
          </div>
          <%= paginate(@cellphone_reloads) if @cellphone_reloads.any? %>
        </div>
      </div>
    </div>
  </div>
</div>
