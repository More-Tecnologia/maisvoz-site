<!-- Page-Title -->
<div class="row">
  <div class="col-sm-12">
    <h4 class="page-title"><%= t('views.backoffice.credits_debits.index.title') %></h4>
    <p class="text-muted page-title-alt"></p>
  </div>
</div>

<!-- STEPS -->
<div class="row">
  <div class="col-sm-12">
    <ul class="steps m-b-30">
      <li class="step"><%= t('backoffice.admin.credits_debits.step_1') %></li>
      <li class="step step--active"><%= t('backoffice.admin.credits_debits.step_2') %></li>
    </ul>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <div class="panel panel-default panel-border">
			<div class="panel-heading">
				<h3 class="panel-title"><%= t('.transfer_to') %></h3>
			</div>
			<div class="panel-body">
        <ul class="list-unstyled w-list">
          <li><b><%= User.human_attribute_name(:name) %>:</b> <%= form.user.name %> </li>
          <li><b><%= User.human_attribute_name(:document_cpf) %>:</b> <%= form.user.document_cpf %> </li>
          <li><b><%= User.human_attribute_name(:email) %>:</b> <%= form.user.email %></li>
        </ul>
			</div>
		</div>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <div class="card-box">
      <div class="row">
        <div class="col-lg-12">
          <div class="p-20">
            <%= render partial: 'form', locals: { form: form, url: backoffice_admin_credits_debits_path, method: :post } %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
