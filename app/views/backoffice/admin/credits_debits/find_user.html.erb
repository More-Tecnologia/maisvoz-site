
<!-- Page-Title -->
<div class="row">
  <div class="col-sm-12">
    <h4 class="page-title"><%= t('views.backoffice.credits_debits.index.title') %></h4>
    <p class="text-muted page-title-alt"></p>
  </div>
</div>

<!-- STEPS -->
<div class="row">
  <div class="col-sm-12">
    <ul class="steps m-b-30">
      <li class="step step--active"><%= t('backoffice.admin.credits_debits.step_1') %></li>
      <li class="step"><%= t('backoffice.admin.credits_debits.step_2') %></li>
    </ul>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <div class="card-box">
      <div class="row">
        <div class="col-lg-12">
          <div class="p-20">
            <%= simple_form_for(form, as: :credit_debit_form, url: backoffice_admin_credits_debit_path(:find_user), method: :put) do |f| %>
              <%= f.input :username %>
              <%= f.input :document_cpf %>
              <%= f.button(:button, t("defaults.search"), data: { disable_with: "<i class='fa fa-spinner fa-spin'></i> Searching...".html_safe }) %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
