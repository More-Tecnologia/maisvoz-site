<div class="admin-dashboard__card-right" id="publicity_card">
  <div class="card__currency">
    <%= image_tag('admin-dashboard/publicidade.svg') %>
    <%= t(:publicity) %>
  </div>
  <div class="card__container-bottom align-items-card">
    <div class="card__currency">
      <%= image_tag('admin-dashboard/btc.svg') %>
      <%= t(:btc_bitcoin) %>
    </div>
    <span class="card__balance"><%= number_to_currency(@index.publicity_balance, unit: 'BTC', precision: 8) %></span>
    <span class="card__botom-value"><%= number_to_currency(0, unit: 'USD', precision: 2) %></span>
  </div>
</div>
