<div class="cards-bottom__container-right">
  <div class="container-calls">
    <span class="calls__title"><%= t(:total_requests) %></span>
    <div class="calls__waiting">
      <span><%= @index.waiting_tickets_count %></span>
      <span><%= t(:waiting) %></span>
    </div>
    <div class="calls__answered">
      <span><%= @index.answered_tickets_count %></span>
      <span><%= t(:answered) %></span>
    </div>
    <div class="calls__finally">
      <span><%= @index.finished_tickets_count %></span>
      <span><%= t(:finished) %></span>
    </div>
  </div>
  <div class="container-table-open-calls">
    <div class="title-open-calls-table">
      <span><%= t(:open_requests) %></span>
    </div>
    <table class="table-open-calls table-striped table-hover">
      <thead>
        <tr>
          <th>#</th>
          <th><%= Ticket.human_attribute_name(:subject) %></th>
          <th><%= t('defaults.user') %></th>
          <th><%= t('backoffice.tickets.index.status') %></th>
          <th><%= t('backoffice.tickets.index.created_at') %></th>
          <th><%= t('backoffice.tickets.index.finished_at') %></th>
          <th><%= t('backoffice.tickets.index.action') %></th>
        </tr>
      </thead>
      <tbody>
        <%= render(@index.waiting_tickets) || render('layouts/no_data') %>
      </tbody>
    </table>
  </div>
</div>
