<%= javascript_include_tag 'charts' %>


<div class="container-graph-donuts">
  <div class="graph-donuts">
    <div class="title-donuts-graph"><%= t(:total_paid_orders) %></div>
    <canvas id="application-chart-donuts1" width="200" height="200" data-values="<%= "#{@index.free_order_count}, #{@index.btc_order_count}, #{@index.admin_nb_order_count}, #{@index.admin_order_count}" %>" ></canvas>
    <div class="content-bottom-donuts">
      <div class="donuts-free">
        <div class="item__identifier limegreen">
        </div>
        <span>Free</span>
      </div>
      <div class="donuts-btc">
        <div class="item__identifier dark-orange">
        </div>
        <span>BTC</span>
      </div>
      <div class="donuts-admin-nb">
        <div class="item__identifier darkslate-grey">
        </div>
        <span>Admin NB</span>
      </div>
      <div class="donuts-admin">
        <div class="item__identifier dark-grey">
        </div>
        <span>Admin</span>
      </div>
    </div>
  </div>
  <div class="graph-donuts">
    <div class="title-donuts-graph"><%= t(:total_withdraws) %></div>
    <canvas id="application-chart-donuts2" width="200" height="200" data-labels="<%= "#{t(:paids)},#{t(:pendings)},#{t(:waiting)},#{t(:rejecteds)},#{t(:canceled)}"%>" data-values="<%= "#{@index.paid_withdraws_count}, #{@index.pending_withdraws_count}, #{@index.waiting_withdraws_count}, #{@index.rejected_withdraws_count}, #{@index.canceled_withdraws_count}" %>"></canvas>
    <div class="content-bottom-donuts">
      <div class="donuts-paid">
        <div class="item__identifier limegreen">
        </div>
        <span><%= t(:paids) %></span>
      </div>
      <div class="donuts-pending">
        <div class="item__identifier dark-orange">
        </div>
        <span><%= t(:pendings) %></span>
      </div>
      <div class="donuts-waiting">
        <div class="item__identifier cornflower-blue">
        </div>
        <span><%= t(:waiting) %></span>
      </div>
      <div class="donuts-rejected">
        <div class="item__identifier dark-grey">
        </div>
        <span><%= t(:rejected) %></span>
      </div>
      <div class="donuts-canceled mt-2">
        <div class="item__identifier red">
        </div>
        <span><%= t(:canceled) %></span>
      </div>
    </div>
  </div>
</div>

<%= javascript_include_tag 'dashboards/donuts1' %>
<%= javascript_include_tag 'dashboards/donuts2' %>
