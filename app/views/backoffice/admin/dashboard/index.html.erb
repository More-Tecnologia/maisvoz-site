<%= javascript_include_tag 'charts' %>

 <div class="row">
   <% @index.data_list.each do |hash| %>
    <div class="col-lg-3 col-sm-6">
      <div class="widget-panel widget-style-2 bg-white">
        <i class="md md-attach-money text-primary"></i>
        <h2 class="m-0 text-dark counter font-600"><%= hash[:value] %></h2>
        <div class="text-muted m-t-5"><%= hash[:label] %></div>
      </div>
    </div>
  <% end %>
 </div>

 <div class="row">
   <div class="col-lg-4">
     <div class="card-box card-box-placeholder">
       <h4><%= t(:orders_history) %></h4>
       <%= column_chart @index.last_orders_count %>
     </div>
   </div>
   <div class="col-lg-4">
     <div class="card-box card-box-placeholder">
       <h4><%= t(:users_history) %></h4>
       <%= area_chart @index.last_users_count %>
     </div>
   </div>

	<div class="col-lg-4">
		<div class="card-box card-box-placeholder">
      <%= link_to t(:see_all), backoffice_admin_orders_path, class: 'pull-right btn btn-default btn-sm waves-effect waves-light', style: 'display: auto;' %>
			<h4 class="text-dark header-title m-t-0"><%= t(:last_orders) %></h4>
      <div class="clearfix"></div>
			<div class="table-responsive">
        <table class="table table-actions-bar">
            <thead>
              <tr>
                <th><%= t(:user) %></th>
                <th><%= t(:order_date) %></th>
                <th><%= t(:order_number) %></th>
                <th><%= t(:amount) %></th>
              </tr>
            </thead>
            <tbody>
              <% @index.last_orders.each do |last_order| %>
              <tr>
                <td><%= link_to_user last_order.user %></td>
                <td><%= l last_order.created_at, format: :short %></td>
                <td><%= link_to "\##{last_order.id}", backoffice_admin_order_path(last_order) %></td>
                <td><%= number_to_currency last_order.total %></td>
              </tr>
              <% end %>
            </tbody>
        </table>
      </div>
		</div>
	</div>
</div>

<div class="row">
  <div class="col-lg-4">
    <div class="card card-placeholder">
      <label class="dashboard-card__label">
        <%= t(:total_bonus) %>
        <div id="total_bonus"></div>
      </label>
      <div class="card-body">
        <div id="bonus"></div>
        <div id="legend_bonus" class="donut-legend"></div>
      </div>
      <div class="row text-center">
        <div class="col-md-6">
          <%= t(:gross_bonus) %>
          <div id="gross_bonus">
          </div>
        </div>
        <div class="col-md-6">
          <%= t(:chargebacks) %>
          <div id="chargebacks">
          </div>
        </div>
      </div>
      <span href="#" class="btn btn-white bt-toggle card-footer" head="total_bonus" group="bonus" object="binary, direct_commission, matching, pool_trade, chargebacks" colors="#FFD878, #BF8049, #001d6e, #0020CF, #d9534f" subheads="gross_bonus, chargebacks" path="bonus_data" admin='true'  amount_sign="&#36;">
        <i class="fa fa-refresh"></i>
      </span>
    </div>
  </div>

  <div class="col-lg-4">
    <div class="card card-placeholder">
      <label class="dashboard-card__label">
        <%= t(:total_payments) %>
        <div id="total_payments"></div>
      </label>
      <div class="card-body">
        <div id="payment"></div>
        <div id="legend_payment" class="donut-legend"></div>
      </div>
      <span href="#" class="btn btn-white bt-toggle card-footer" head="total_payments" group="payment" object="balance, admin, voucher, btc" colors="#FFD878, #BF8049, #001d6e, #0020CF, #808080, #d9534f" path="payment_data" admin='true'>
        <i class="fa fa-refresh"></i>
      </span>
    </div>
  </div>

  <div class="col-lg-4">
    <div class="card card-placeholder">
      <label class="dashboard-card__label">
        <%= t(:total_withdrawals) %>
        <div id="total_withdrawals"></div>
      </label>
      <div class="card-body">
        <div id="withdrawals"></div>
        <div id="legend_withdrawals" class="donut-legend"></div>
      </div>
      <span href="#" class="btn btn-white bt-toggle card-footer" head="total_withdrawals" group="withdrawals" object="pending, approved, refused, waiting, canceled" colors="#FFD878, #BF8049, #001d6e, #0020CF, #808080, #d9534f" path="withdrawals_data" admin='true'>
        <i class="fa fa-refresh"></i>
      </span>
    </div>
  </div>
</div>

<div id="locale" value="<%= params[:locale] %>">

</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/morris.js/0.5.0/morris.min.js"></script>

<%= javascript_include_tag 'dashboards/user_dashboard', 'data-turbolinks-track': 'reload' %>
