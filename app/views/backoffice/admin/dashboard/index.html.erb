<%= javascript_include_tag 'charts' %>

 <div class="row">
    <div class="col-lg-3 col-sm-6">
        <div class="widget-panel widget-style-2 bg-white">
            <i class="md md-attach-money text-primary"></i>
            <h2 class="m-0 text-dark counter font-600"><%= @today_orders_count  %></h2>
            <div class="text-muted m-t-5"><%= t('views.dashboard.admin.today_orders') %></div>
        </div>
    </div>
    <div class="col-lg-3 col-sm-6">
        <div class="widget-panel widget-style-2 bg-white">
            <i class="md md-add-shopping-cart text-pink"></i>
            <h2 class="m-0 text-dark counter font-600"><%= @orders_count %></h2>
            <div class="text-muted m-t-5"><%= t('views.dashboard.admin.total_orders') %></div>
        </div>
    </div>
    <div class="col-lg-3 col-sm-6">
        <div class="widget-panel widget-style-2 bg-white">
            <i class="md md-store-mall-directory text-info"></i>
            <h2 class="m-0 text-dark counter font-600"><%= @active_products_count %></h2>
            <div class="text-muted m-t-5"><%= t('views.dashboard.admin.active_products') %></div>
        </div>
    </div>
    <div class="col-lg-3 col-sm-6">
        <div class="widget-panel widget-style-2 bg-white">
            <i class="md md-account-child text-custom"></i>
            <h2 class="m-0 text-dark counter font-600"><%= @users_count %></h2>
            <div class="text-muted m-t-5"><%= t('views.dashboard.admin.total_users') %></div>
        </div>
    </div>
 </div>

 <div class="row">
   <div class="col-md-6">
     <div class="card-box">
       <h4><%= t(:orders_history) %></h4>
       <%= column_chart @last_orders_count %>
     </div>
   </div>
   <div class="col-md-6">
     <div class="card-box">
       <h4><%= t(:users_history) %></h4>
       <%= area_chart @last_users_count %>
     </div>
   </div>
 </div>

 <div class="row">
  	<div class="col-lg-6">
  		<div class="card-box">
        <%= link_to t(:see_all), backoffice_admin_orders_path, class: 'pull-right btn btn-default btn-sm waves-effect waves-light' %>
  			<h4 class="text-dark header-title m-t-0"><%= t(:last_orders) %></h4>
        <div class="clearfix"></div>
  			<div class="table-responsive">
          <table class="table table-actions-bar">
              <thead>
                <tr>
                  <th><%= t(:user) %></th>
                  <th><%= t(:order_date) %></th>
                  <th><%= t(:order_number) %></th>
                  <th><%= t(:amount) %></th>
                </tr>
              </thead>
              <tbody>
                <% @last_orders.each do |last_order| %>
                <tr>
                  <td><%= link_to_user last_order.user %></td>
                  <td><%= l last_order.created_at, format: :short %></td>
                  <td><%= link_to "\##{last_order.id}", backoffice_admin_order_path(last_order) %></td>
                  <td><%= number_to_currency last_order.total %></td>
                </tr>
                <% end %>
              </tbody>
          </table>
        </div>
  		</div>
  	</div>
  </div>
