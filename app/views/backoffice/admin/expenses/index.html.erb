<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
<div class="box-orders">
  <div class="box-second">
    <h4 class="page-title"><%= t('expenses') %></h4>
  </div>
</div>
<div class="box-orders">
  <div class="box-second">
    <div class="panel panel-border panel-custom">
      <div class="panel-body">
        <%=  link_to new_backoffice_admin_expense_path, class: 'btn btn-info' do %>
          <strong>
            <%= t('new_expense') %>
          </strong>
        <% end %>
        <%=  link_to new_backoffice_admin_pool_expense_path, class: 'btn btn-warning' do %>
          <strong>
            <%= t('new_pool_expense') %>
          </strong>
        <% end %>
        <%=  link_to new_backoffice_admin_pool_wallet_path, class: 'btn btn-success' do %>
          <strong>
            <%= t('new_pool_wallet') %>
          </strong>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="box-orders">
  <div class="box-second">
    <div class="card-box">
      <div class="row">
        <div class="col-lg-12">
          <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover m-0">
              <thead>
                <tr>
                  <th><%= t(:title) %></th>
                  <th><%= t(:amount) %></th>
                  <th><%= t(:wallet) %></th>
                  <th><%= t(:actions) %></th>
                </tr>
              </thead>
              <tbody>
                <% if @pool_wallets.any? %>
                  <% @pool_wallets.each do |pool_wallet| %>
                    <tr>
                      <td><%= pool_wallet.title %></td>
                      <td> <%= number_to_currency(pool_wallet.cent_amount, unit: 'BTC', precision: 8) %> </td>
                      <td> <%= pool_wallet.wallet %></td>
                      <td>
                        <%= link_to edit_backoffice_admin_pool_wallet_path(pool_wallet) do %>
                          <%= t(:edit) %>
                        <% end %>
                      </td>
                    </tr>
                  <% end %>
                <% else %>
                  <tr>
                    <td colspan="50" class="text-center"><%= t('helpers.no_data') %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
          <div class="row">
            <div class="col-lg-12">
              <%= paginate @pool_wallets %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
