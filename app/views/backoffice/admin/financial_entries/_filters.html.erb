<div class="row">
  <div class="col-sm-12">
    <div class="panel panel-border panel-custom">

    <div class="panel-heading">
			<h3 class="panel-title"><%= t(:filters) %></h3>
		</div>

    <div class="panel-body">
      <%= search_form_for q, url: backoffice_admin_financial_entries_path do |f| %>

        <div class="form-group">
          <div class="row">
            <div class="col-md-4">
              <%= f.label t('.from_user') %>
              <%= f.search_field :from_user_username_cont, class: 'form-control input-sm' %>
            </div>
            <div class="col-md-4">
              <%= f.label t('.to_user') %>
              <%= f.search_field :to_user_username_cont, class: 'form-control input-sm' %>
            </div>
            <div class="col-md-4">
              <%= f.label t('.type') %>
              <%= f.select :type_eq, [['Credit', 'CreditEntry'], ['Debit', 'DebitEntry']], { include_blank: true }, { class: 'form-control input-sm' } %>
            </div>
          </div>
        </div>


        <div class="form-group">
          <div class="row">
            <div class="col-md-4">
              <%= f.label t('.created_from') %>
              <%= f.search_field :date_created_at_gteq, class: 'form-control input-sm', data: { provide: 'datepicker' } %>
            </div>
            <div class="col-md-4">
              <%= f.label t('.created_until') %>
              <%= f.search_field :date_created_at_lteq, class: 'form-control input-sm', data: { provide: 'datepicker' } %>
            </div>
          </div>
        </div>

        <%= f.submit t(:search), class: 'btn btn-default' %>

      <% end %>
    </div>

    </div>
  </div>
</div>
