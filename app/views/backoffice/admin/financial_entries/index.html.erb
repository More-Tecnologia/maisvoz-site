<div class="content-page">
  <!-- Start content -->
  <div class="content">
    <div class="container">

      <!-- Page-Title -->
      <div class="row">
        <div class="col-sm-12">
          <h4 class="page-title"><%= t('.title') %></h4>
          <p class="text-muted page-title-alt"><%= t('.subtitle') %></p>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-12">
          <div class="card-box">
            <div class="row">
              <div class="col-lg-12">

                <table class="table table-bordered m-0">

                  <thead>
                    <tr>
                      <th>#</th>
                      <th><%= FinancialEntry.human_attribute_name(:description) %></th>
                      <th><%= FinancialEntry.human_attribute_name(:from) %></th>
                      <th><%= FinancialEntry.human_attribute_name(:to) %></th>
                      <th><%= FinancialEntry.human_attribute_name(:type) %></th>
                      <th><%= FinancialEntry.human_attribute_name(:credit) %></th>
                      <th><%= FinancialEntry.human_attribute_name(:debit) %></th>
                      <th><%= FinancialEntry.human_attribute_name(:created_at) %></th>
                    </tr>
                  </thead>
                  <tbody>
                    <% financial_entries.each do |financial_entry| %>
                      <tr>
                        <th><%= financial_entry.id %></th>
                        <th><%= financial_entry.description %></th>
                        <th><%= financial_entry.from_user.try(:username) %></th>
                        <th><%= financial_entry.to.user.username %></th>
                        <td><%= t financial_entry.type %></td>
                        <td><%= number_to_currency financial_entry.credit %></td>
                        <td><%= number_to_currency financial_entry.debit %></td>
                        <td><%= l financial_entry.created_at, format: :short %></td>
                      </tr>
                    <% end %>
                    <% if financial_entries.empty? %>
                      <tr>
                        <td colspan="5" class="text-center"><%= t('.no_data') %></td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>

                <%= paginate financial_entries %>

              </div>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>
