<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
<div class="box-financial">
  <div class="box-second">
    <h4 class="page-title"><%= t('defaults.financial_reports') %></h4>
  </div>
</div>
<div class="row">
  <div class="col-sm-12">
    <%= render 'backoffice/admin/financial_reports/filters' %>
  </div>
</div>
<div class="box-financial">
  <div class="box-second">
    <div class="card-box">
      <div class="row">
        <div class="col-lg-12">
        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover m-0">
            <thead>
              <tr>
                <th>#</th>
                <th><%= FinancialReport.human_attribute_name(:order_payment_amount_cents) %></th>
                <th><%= FinancialReport.human_attribute_name(:pool_amount_cents) %></th>
                <th><%= FinancialReport.human_attribute_name(:withdrawal_amount_cents) %></th>
                <th><%= FinancialReport.human_attribute_name(:pool_balance_amount_cents) %></th>
                <th><%= FinancialReport.human_attribute_name(:profit_amount_cents) %></th>
                <th><%= FinancialReport.human_attribute_name(:profit_per_partner_amount_cents) %></th>
                <th><%= FinancialReport.human_attribute_name(:begin_datetime) %></th>
                <th><%= FinancialReport.human_attribute_name(:end_datetime) %></th>
              </tr>
            </thead>
            <tbody>
              <%= render(@financial_reports) %>
            </tbody>
          </table>
          </div>
          <%= paginate @financial_reports %>
        </div>
      </div>
    </div>
  </div>
</div>
