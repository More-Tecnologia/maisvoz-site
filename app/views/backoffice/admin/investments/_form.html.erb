<%= simple_form_for investment, url: path do |f| %>
  <%= f.input :name %>
  <%= f.input :total, label: 'Valor total do empreendimento' %>
  <%= f.input :price, label: 'Valor da cota' %>
  <%= f.input :shares_available, label: 'Cotas disponíveis' %>
  <%= f.input :shares_total, label: 'Quantidade de cotas' %>
  <%= f.input :investment_cycles, label: 'Total de ciclos (meses)' %>
  <%= f.input :investment_yield, label: 'Retorno do investimento (%)' %>
  <%= f.input :details, label: 'Descrição do empreendimento' %>
  <%= f.input :address, label: 'Endereço completo' %>
  <%= f.input :phone, label: 'Telefone' %>
  <%= f.input :whatsapp, label: 'Whatsapp' %>
  <%= f.input :status, collection: Investment.statuses %>
  <%= f.input :type, collection: Investment.types %>
  <%= f.submit 'Criar Conta de Participação', class: 'btn btn-primary' %>
<% end %>
