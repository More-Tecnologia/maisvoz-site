<!-- Page-Title -->
<div class="row">
  <div class="col-sm-12">
    <h4 class="page-title">Contas de Participação</h4>
    <p class="text-muted page-title-alt">Todas as contas de participação cadastradas</p>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <div class="card-box">
      <div class="row">
        <div class="col-lg-12">

          <div class="m-b-20">
            <%= link_to new_backoffice_admin_investment_path, class: 'btn btn-primary waves-effect waves-light' do %>
              <i class="md md-add"></i> Nova Conta de Participação
            <% end %>
          </div>

          <table class="table table-bordered m-0">
            <thead>
              <tr>
                <th>#</th>
                <th>Nome</th>
                <th>Quantidade</th>
                <th>Preço</th>
                <th>Ciclos</th>
                <th>Retorno</th>
                <th>Status</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @investments.each do |category| %>
                <tr>
                  <th><%= category.id %></th>
                  <td><%= category.name %></td>
                  <td><%= category.shares_available %>/<%= category.shares_total %></td>
                  <td><%= category.price %></td>
                  <td><%= category.investment_cycles %></td>
                  <td><%= number_to_percentage category.investment_yield, precision: 2 %></td>
                  <td><%= category.status %></td>
                  <td>
                    <%= link_to edit_backoffice_admin_investment_path(category), class: 'action-edit' do %>
                      <i class="fas fa-edit"></i>
                    <% end %>
                  </td>
                </tr>
              <% end %>
              <% if @investments.empty? %>
                <tr>
                  <td colspan="5" class="text-center"><%= t('views.backoffice.categories.index.no_data') %></td>
                </tr>
              <% end %>
            </tbody>
          </table>

        </div>
      </div>
    </div>
  </div>
</div>
