<div class="row">
  <div class="col-sm-12">
    <div class="panel panel-border panel-custom">

    <div class="panel-heading">
			<h3 class="panel-title"><%= t(:filters) %></h3>
		</div>

    <div class="panel-body">
      <%= search_form_for q, url: backoffice_admin_orders_path do |f| %>

        <div class="form-group">
          <div class="row">
            <div class="col-md-4">
              <%= f.label t('.user') %>
              <%= f.search_field :user_username_cont, class: 'form-control input-sm' %>
            </div>
            <div class="col-md-4">
              <%= f.label t('.total') %>
              <%= f.search_field :total_cents_eq, class: 'form-control input-sm' %>
            </div>
            <div class="col-md-4">
              <%= f.label t('.status') %>
              <%= f.select :status_eq, Order.statuses.map { |k, v| [t(k), v] }, { include_blank: true }, { class: 'form-control input-sm' } %>
            </div>
          </div>
        </div>


        <div class="form-group">
          <div class="row">
            <div class="col-md-4">
              <%= f.label t('.paid_from') %>
              <%= f.search_field :date_paid_at_gteq, class: 'form-control input-sm', data: { provide: 'datepicker' } %>
            </div>
            <div class="col-md-4">
              <%= f.label t('.paid_until') %>
              <%= f.search_field :date_paid_at_lteq, class: 'form-control input-sm', data: { provide: 'datepicker' } %>
            </div>
            <div class="col-md-4">
              <%= f.label t('.id_in') %>
              <%= f.search_field :id_in, class: 'form-control input-sm' %>
            </div>
          </div>
        </div>

        <%= f.submit t(:search), class: 'btn btn-default' %>

      <% end %>
    </div>

    </div>
  </div>
</div>
