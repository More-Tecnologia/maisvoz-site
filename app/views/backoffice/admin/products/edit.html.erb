<!-- Page-Title -->
<div class="row">
  <div class="col-sm-12">
    <h4 class="page-title"><%= t('views.backoffice.admin.products.edit.title', product_name: product.name) %></h4>
    <p class="text-muted page-title-alt"><%= t('views.backoffice.admin.products.edit.subtitle') %></p>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <div class="card-box">
      <div class="row">
        <div class="col-lg-12">
          <div class="p-20">
            <%= render partial: 'form', locals: { form: form, product: product, url: backoffice_admin_product_path(product), method: :put } %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
