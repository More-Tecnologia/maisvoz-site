<%= form_for([:backoffice, :admin, @raffle], html: { class: "register-raffle__form" }) do |f| %>
  <label class="register-raffle__label__image">
    <div class="cover-raffle-img_label">
      <% if @raffle.thumb.present? %>
        <img src="<%= @raffle.path %>" alt="" class="cover-raffle-img_label">
      <% else %>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="30"
          height="30"
          fill="grey"
          class="bi bi-image"
          viewbox="0 0 16 16"
        >
          <path d="M6.002 5.5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0z" />
          <path
            d="M2.002 1a2 2 0 0 0-2 2v10a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V3a2 2 0 0 0-2-2h-12zm12 1a1 1 0 0 1 1 1v6.5l-3.777-1.947a.5.5 0 0 0-.577.093l-3.71 3.71-2.66-1.772a.5.5 0 0 0-.63.062L1.002 12V3a1 1 0 0 1 1-1h12z"
          />
        </svg>
      <% end %>

    <%= f.file_field :thumb, as: :file, label: false, class: "register-raffle__input__image", input_html: { accept: 'image/*' } %>
   </div>
  </label>
  <span class="register-raffle__size-image"><%= t(:ideal_thumb_size) %></span>
  <strong class="register-rafle__form__label"><%= t(:title) %></strong>
  <div class="login-fields">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="16"
      height="16"
      fill="black"
      class="bi bi-bag-fill"
      viewBox="0 0 16 16"
    >
      <path
        d="M8 1a2.5 2.5 0 0 1 2.5 2.5V4h-5v-.5A2.5 2.5 0 0 1 8 1zm3.5 3v-.5a3.5 3.5 0 1 0-7 0V4H1v10a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V4h-3.5z"
      />
    </svg>
    <%= f.text_field :title, class: 'input-register-raffle', placeholder: t(:title) %>
  </div>
  <strong class="register-rafle__form__label"><%= t(:short_description) %></strong>
  <div class="login-fields">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="16"
      height="16"
      fill="black"
      class="bi bi-calendar2-minus-fill"
      viewBox="0 0 16 16"
    >
      <path
        d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5zm9.954 3H2.545c-.3 0-.545.224-.545.5v1c0 .276.244.5.545.5h10.91c.3 0 .545-.224.545-.5v-1c0-.276-.244-.5-.546-.5zM6 10a.5.5 0 0 0 0 1h4a.5.5 0 0 0 0-1H6z"
      />
    </svg>
    <%= text_field_tag :'product[short_description]', @raffle.short_description, class: 'input-register-raffle', placeholder: t(:short_description) %>
  </div>
  <strong class="register-rafle__form__label"><%= t(:description) %></strong>
  <div class="login-fields" style="height: auto; border-radius: 10px">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="16"
      height="16"
      fill="black"
      class="bi bi-chat-left-text-fill"
      viewBox="0 0 16 16"
    >
      <path
        d="M0 2a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H4.414a1 1 0 0 0-.707.293L.854 15.146A.5.5 0 0 1 0 14.793V2zm3.5 1a.5.5 0 0 0 0 1h9a.5.5 0 0 0 0-1h-9zm0 2.5a.5.5 0 0 0 0 1h9a.5.5 0 0 0 0-1h-9zm0 2.5a.5.5 0 0 0 0 1h5a.5.5 0 0 0 0-1h-5z"
      />
    </svg>
    <%= text_area_tag :'product[description]', @raffle.description, class: 'textarea-register-raffle', rows: '5', placeholder: t(:description) %>
  </div>

  <strong class="register-rafle__form__label">
    <%= t(:quantity_of_tickets) %>
  </strong>
  <div class="login-fields">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="16"
      height="16"
      fill="black"
      class="bi bi-ticket-perforated-fill"
      viewBox="0 0 16 16"
    >
      <path
        d="M0 4.5A1.5 1.5 0 0 1 1.5 3h13A1.5 1.5 0 0 1 16 4.5V6a.5.5 0 0 1-.5.5 1.5 1.5 0 0 0 0 3 .5.5 0 0 1 .5.5v1.5a1.5 1.5 0 0 1-1.5 1.5h-13A1.5 1.5 0 0 1 0 11.5V10a.5.5 0 0 1 .5-.5 1.5 1.5 0 1 0 0-3A.5.5 0 0 1 0 6V4.5Zm4-1v1h1v-1H4Zm1 3v-1H4v1h1Zm7 0v-1h-1v1h1Zm-1-2h1v-1h-1v1Zm-6 3H4v1h1v-1Zm7 1v-1h-1v1h1Zm-7 1H4v1h1v-1Zm7 1v-1h-1v1h1Zm-8 1v1h1v-1H4Zm7 1h1v-1h-1v1Z"
      />
    </svg>
    <%= f.number_field :max_ticket_number, class: 'input-register-raffle', placeholder: t(:quantity_of_tickets) %>
  </div>
  <strong class="register-rafle__form__label"><%= t(:ticket_price) %></strong>
  <div class="login-fields">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="16"
      height="16"
      fill="black"
      class="bi bi-currency-dollar"
      viewBox="0 0 16 16"
    >
      <path
        d="M4 10.781c.148 1.667 1.513 2.85 3.591 3.003V15h1.043v-1.216c2.27-.179 3.678-1.438 3.678-3.3 0-1.59-.947-2.51-2.956-3.028l-.722-.187V3.467c1.122.11 1.879.714 2.07 1.616h1.47c-.166-1.6-1.54-2.748-3.54-2.875V1H7.591v1.233c-1.939.23-3.27 1.472-3.27 3.156 0 1.454.966 2.483 2.661 2.917l.61.162v4.031c-1.149-.17-1.94-.8-2.131-1.718H4zm3.391-3.836c-1.043-.263-1.6-.825-1.6-1.616 0-.944.704-1.641 1.8-1.828v3.495l-.2-.05zm1.591 1.872c1.287.323 1.852.859 1.852 1.769 0 1.097-.826 1.828-2.2 1.939V8.73l.348.086z"
      />
    </svg>
    <%= text_field_tag :'product[price_cents]', @raffle.price_cents, class: 'input-register-raffle money-br', placeholder: t(:price) %>
  </div>
  <div class="remember-user">
    <div class="checkbox">
      <%= check_box :product, :active, { checked: @raffle.active }, 'true', 'false' %>
      <span><%= t(:active) %></span>
    </div>
  </div>
  <%= f.submit class: 'register-raffle__button-submit' %>
<% end %>
