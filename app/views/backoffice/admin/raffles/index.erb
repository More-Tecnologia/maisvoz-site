<div class="box-orders">
  <div class="box-second">
    <h4 class="page-title"><%= t(:raffles_list) %></h4>
    <p class="text-muted page-title-alt"></p>
  </div>
  <div class="box-second">
    <div class="card-box">
      <div class="row">
        <div class="col-lg-12">

          <div class="m-b-20">
            <%= link_to new_backoffice_admin_raffle_path, class: 'btn btn-primary waves-effect waves-light' do %>
            <i class="md md-add"></i>
            <%= t(:new_raffle) %>
          <% end %>
        </div>
        <div class="col-lg-12">
          <div class="table-responsive">
            <table class="table table-bordered m-0">
              <thead>
                <tr>
                  <th>#</th>
                  <th><%= t(:title) %></th>
                  <th><%= t(:price) %></th>
                  <th><%= t(:type) %></th>
                  <th><%= t(:status) %></th>
                  <th><%= t(:active?) %></th>
                  <th><%= t(:actions) %></th>
                </tr>
              </thead>
              <tbody>
                <% @raffles.each do |raffle| %>
                  <tr>
                    <th><%= raffle.hashid %></th>
                    <td><%= raffle.title %></td>
                    <td><%= raffle.price %></td>
                    <td><%= raffle.kind %></td>
                    <td><%= raffle.status %></td>
                    <td><%= t(raffle.active) %></td>
                    <td>
                      <%= link_to edit_backoffice_admin_raffle_path(raffle) do %>
                        <i class="fas fa-edit"></i>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
                <% if @raffles.none? %>
                  <tr>
                    <td colspan="5" class="text-center"><%= t(:nothing_found) %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
          <div class="row">
            <div class="col-lg-12">
              <%= paginate @raffles %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
