<div class="row">
  <div class="col-sm-12">
    <div class="panel panel-border panel-custom">
      <div class="panel-heading">
  			<h3 class="panel-title"><%= t(:filters) %></h3>
  		</div>
      <div class="panel-body">
        <%= search_form_for @q, url: new_backoffice_admin_sim_card_control_path do |f| %>
          <div class="form-group">
            <div class="row">
              <div class="col-md-2">
                <%= f.label t('attributes.username') %>
                <%= f.search_field :order_user_username_eq, class: 'form-control input-sm' %>
              </div>
              <div class="col-md-2">
                <%= f.label t('attributes.from') %>
                <%= f.search_field :created_at_gteq, class: 'form-control input-sm',
                                                     data: { provide: 'datepicker' } %>
              </div>
              <div class="col-md-2">
                <%= f.label t('attributes.until') %>
                <%= f.search_field :created_at_lteq, class: 'form-control input-sm',
                                                     data: { provide: 'datepicker' } %>
              </div>
              <div class="col-md-2">
                <%= f.label t('attributes.processed_at') %>
                <%= f.search_field :processed_at_eq, class: 'form-control input-sm',
                                                     data: { provide: 'datepicker' } %>
              </div>
            </div>
          </div>
          <%= f.submit t('datagrid.form.search'), class: 'btn btn-default' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
