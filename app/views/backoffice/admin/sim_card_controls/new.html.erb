<!-- Page-Title -->
<div class="row">
  <div class="col-sm-12 m-b-23">
    <h4 class="page-title"><%= t('.title') %></h4>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <div class="card-box">
      <div class="row">
        <div class="col-lg-12">
          <div class="table-responsive">
          <table class="table table-striped table-bordered m-0">
            <thead>
              <tr>
                <th> <%= OrderItem.human_attribute_name(:item) %> </th>
                <th> <%= OrderItem.human_attribute_name(:username) %> </th>
                <th> <%= OrderItem.human_attribute_name(:order_id) %> </th>
                <th> <%= OrderItem.human_attribute_name(:product) %> </th>
                <th> <%= OrderItem.human_attribute_name(:quantity) %> </th>
                <th> <%= OrderItem.human_attribute_name(:unit_price_cents) %> </th>
                <th> <%= OrderItem.human_attribute_name(:total) %> </th>
                <th> <%= OrderItem.human_attribute_name(:sim_card_quantity) %> </th>
                <th> <%= OrderItem.human_attribute_name(:sim_card_quantity_added) %> </th>
                <th> <%= OrderItem.human_attribute_name(:processed_at) %> </th>
                <th> <%= OrderItem.human_attribute_name(:actions) %> </th>
              </tr>
            </thead>
            <tbody>
              <% @sim_card_order_items.each do |order_item| %>
                <tr>
                  <td> <%= order_item.try(:hashid) %> </td>
                  <td> <%= order_item.try(:order).try(:user).try(:username) %> </td>
                  <td> <%= link_to(order_item.try(:order).try(:hashid), backoffice_admin_order_path(order_item.order)) if order_item.order %> </td>
                  <td> <%= order_item.try(:product).try(:name) %> </td>
                  <td> <%= order_item.try(:quantity) %> </td>
                  <td> <%= number_to_currency(order_item.unit_value) if order_item.unit_value %> </td>
                  <td> <%= number_to_currency(order_item.total) if order_item.try(:total) %> </td>
                  <td> <%= order_item.total_quantity.to_i %> </td>
                  <td class="<%= order_item.sim_cards.size > order_item.total_quantity.to_i  ? 'text-danger' : 'text-warning' %>"> <%= order_item.sim_cards.size %> </td>
                  <td> <%= l(order_item.processed_at, format: :long) if order_item.processed_at %> </td>
                  <td> <%= link_to t('defaults.sim_card_add'), new_backoffice_admin_order_item_sim_card_path(order_item),
                                                               class: 'btn btn-info btn-sm' if order_item.order && order_item.unprocessed? %>
                </tr>
              <% end %>
              <% if @sim_card_order_items.empty? %>
                <tr>
                  <td colspan="10" class="text-center"><%= t('views.backoffice.orders.index.no_data') %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
          </div>
          <%= paginate(@sim_card_order_items) if @sim_card_order_items.any? %>
        </div>
      </div>
    </div>
  </div>
</div>
