<!-- Page-Title -->
<div class="row">
  <div class="col-sm-12">
    <h4 class="page-title m-b-30"><%= t('.title') %></h4>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <div class="card-box">
      <div class="row">
        <%= form_tag backoffice_admin_social_leader_debugger_index_path, method: :get do %>
          <div class="col-md-4 form-group">
            <label for="">Username:</label>
            <%= text_field_tag :username, params[:username], class: 'form-control' %>
          </div>
          <div class="col-md-12 m-b-30">
            <%= submit_tag 'Filtrar', class: 'btn btn-primary' %>
          </div>
        <% end %>
      </div>
      <div class="row">
        <div class="col-lg-12">
          <h3>Total usu√°rios: <%= number_with_delimiter generations.size %></h3>
          <h3>PVA Total: <%= number_with_delimiter generations.sum { |g| g.month_pva} %></h3>

          <table class="table table-striped table-bordered toggle-circle m-b-0">
            <thead>
              <tr>
                <th>#</th>
                <th><%= User.human_attribute_name(:username) %></th>
                <th><%= User.human_attribute_name(:career_kind) %></th>
                <th><%= PvActivityHistory.human_attribute_name(:balance) %></th>
              </tr>
            </thead>
            <tbody>
              <% generations.each do |gen| %>
                <tr>
                  <th><%= link_to 'Filtrar', backoffice_admin_social_leader_debugger_index_path(username: gen.username) %></th>
                  <td><%= link_to_user gen %></td>
                  <td><%= gen.career_kind && t(gen.career_kind) %></td>
                  <td><%= number_with_delimiter gen.month_pva %></td>
                </tr>
              <% end %>
              <% if generations.empty? %>
                <tr>
                  <td colspan="4" class="text-center"><%= t('.no_data') %></td>
                </tr>
              <% end %>
            </tbody>
          </table>

        </div>
      </div>
    </div>
  </div>
</div>
