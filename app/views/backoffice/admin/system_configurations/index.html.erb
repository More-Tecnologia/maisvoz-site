<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
<!-- Page-Title -->
<div class="box-orders">
  <div class="box-second">
    <h1 class="page-title m-b-30"><%= t(:configs) %></h1>
  </div>
</div>
<div class="box-orders">
  <div class="box-second">
    <div class="card-box">
      <div class="row">
        <div class="col-lg-12">
            <div class="table-responsive">
              <table class="table table-striped table-bordered table-hover m-0">
                <thead>
                  <tr>
                    <th>#</th>
                    <th><%= t(:company_name) %></th>
                    <th><%= t(:withdrawal_fee) %></th>
                    <th><%= t(:taxable_fee) %></th>
                    <th><%= t(:active?) %></th>
                    <th><%= t('backoffice.tickets.index.action') %></th>
                  </tr>
                </thead>
                <tbody>
                  <% @configs.each do |config| %>
                  <tr>
                    <td><%= config.id %></td>
                    <td>
                      <%= config.company_name %>
                    </td>
                    <td>
                      <%= config.withdrawal_fee %>
                    </td>
                    <td><%= config.taxable_fee %></td>
                    <td><%= t(config.active) %></td>
                    <td>
                      <%= link_to edit_backoffice_admin_system_configuration_path(config), class: 'action-edit' do %>
                        <i class="fa fa-edit"></i>
                      <% end %>
                      <%= link_to(backoffice_admin_system_configuration_path(config),
                                  class: 'action-remove',
                                  method: :delete,
                                  data: { confirm: t(:configuration_inactivation_message) }
                                  ) do %>
                        <i class="fa fa-minus-circle"></i>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
                </tbody>
              </table>

            </div>
        </div>
          <br>
          <div class="col-md-10">
            <%= paginate @configs %>
          </div>
          <div class="col-md-2">
            <br>
            <%= link_to t(:new), new_backoffice_admin_system_configuration_path, class: 'btn btn-success pull-right' %>
          </div>

    </div>
  </div>
</div>
