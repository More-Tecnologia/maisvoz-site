<div class="row">
  <div class="col-sm-12">
    <div class="panel panel-border panel-custom">
      <div class="panel-heading">
  			<h3 class="panel-title"><%= t('defaults.filters') %></h3>
  		</div>
      <div class="panel-body">
        <%= search_form_for @q, url: backoffice_admin_tickets_path do |f| %>
          <div class="form-group">
            <div class="row">
              <div class="col-md-3">
                <%= f.label t('attributes.subject') %>
                <%= f.select :subject_id_in,
                             Subject.where(active: true).map { |subject| [subject.name, subject.id] },
                                                             { include_blank: t('all') },
                                                             { class: 'form-control input-sm' } %>
              </div>
              <div class="col-md-3">
                <%= f.label t('backoffice.tickets.index.status') %>
                <%= f.select :status_eq, Ticket.statuses.map { |status| [t(status.first), status.last] },
                                         { :include_blank => t('all') },
                                         { class: 'form-control input-sm' } %>
              </div>
              <div class="col-md-3">
                <%= f.label t('attributes.from') %>
                <%= f.search_field :created_at_gteq, class: 'form-control',
                                                     type: 'date' %>
              </div>
              <div class="col-md-3">
                <%= f.label t('attributes.until') %>
                <%= f.search_field :created_at_lteq, class: 'form-control',
                                                     type: 'date' %>
            </div>
          </div>
          <%= f.submit t('datagrid.form.search'), class: 'btn btn-default' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
