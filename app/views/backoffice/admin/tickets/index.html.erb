<!-- Page-Title -->
<div class="row">
  <div class="col-sm-12 m-b-23">
    <h4 class="page-title"><%= t('defaults.tickets') %></h4>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <%= render 'backoffice/admin/tickets/filters' %>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <div class="card-box">
      <div class="row">
        <div class="col-lg-12">
            <div class="table-responsive">
              <table class="table table-striped table-bordered table-hover m-0">
                <thead>
                  <tr>
                    <th>#</th>
                    <th><%= Ticket.human_attribute_name(:subject) %></th>
                    <th><%= Ticket.human_attribute_name(:user) %></th>
                    <th><%= t('backoffice.tickets.index.status') %></th>
                    <th><%= t('backoffice.tickets.index.created_at') %></th>
                    <th><%= t('backoffice.tickets.index.finished_at') %></th>
                    <th><%= t('backoffice.tickets.index.action') %></th>
                  </tr>
                </thead>
                <tbody>
                  <% if @tickets.length > 0 %>
                    <% @tickets.each do |ticket| %>
                     <tr>
                        <td><%= ticket.id %></td>
                        <td><%= t("defaults.#{ticket.subject.name.downcase.gsub(/\s/, '_')}") %></td>
                        <td><%= ticket.user.username %></td>
                        <% if ticket.status == 'waiting'%>
                          <td class="support-report-status-aguar">
                        <% elsif ticket.status == 'answered' %>
                          <td class="support-report-status-resp">
                        <% else %>
                          <td class="support-report-status-fin">
                        <% end %>
                          <span><%= t("views.backoffice.admin.tickets.index.status.#{ticket.status}") %></span>
                        </td>
                        <td><%= l(ticket.created_at, format: '%B %d, %Y' ) %></td>
                        <td><%= l(ticket.finished_at, format: '%B %d, %Y' ) if ticket.finished_at%></td>
                        <td>
                          <%= link_to backoffice_admin_ticket_path(ticket), class: 'action-edit' do %>
                            <i class="fa fa-eye"></i>
                          <% end %>
                          <%= link_to(
                            backoffice_admin_ticket_path(ticket),
                            class: 'action-remove',
                            method: :delete,
                            data: { confirm: t('defaults.confirm_removal') }
                            ) do %>
                            <i class="fa fa-trash-alt"></i>
                          <% end %>
                        </td>
                      </tr>
                    <% end %>
                  <% else %>
                    <tr>
                      <td colspan="50" class="text-center"><%= t('.no_data') %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
              </div>
              <div class="col-lg-12">
                <%= paginate @tickets %>
              </div>
            </div>
        </div>
    </div>
  </div>
</div>
