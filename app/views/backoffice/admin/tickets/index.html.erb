<!-- Page-Title -->
<div class="row">
  <div class="col-sm-12 m-b-23">
    <h4 class="page-title">
      <%= t('defaults.tickets') %>
    </h4>
  </div>
</div>
<div class="row">
  <div class="col-sm-12">
    <%= render 'backoffice/admin/tickets/filters' %>
  </div>
</div>
<div class="row">
  <div class="col-sm-12">
    <div class="card-box">
      <div class="row">
        <div class="col-lg-12">
            <div class="table-responsive">
              <table class="table table-striped table-bordered table-hover m-0">
                <thead>
                  <tr>
                    <th>#</th>
                    <th><%= Ticket.human_attribute_name(:subject) %></th>
                    <th><%= t('defaults.user') %></th>
                    <th><%= t('backoffice.tickets.index.status') %></th>
                    <th><%= t('backoffice.tickets.index.created_at') %></th>
                    <th><%= t('backoffice.tickets.index.finished_at') %></th>
                    <th><%= t('backoffice.tickets.index.action') %></th>
                  </tr>
                </thead>
                <tbody>
                  <%= render(@tickets) || render('layouts/no_data') %>
                </tbody>
              </table>
              <div class="col-lg-12">
                <%= paginate @tickets %>
              </div>
            </div>
        </div>
    </div>
  </div>
</div>
