<!-- Page-Title -->
<div class="row">
  <div class="col-sm-12">
    <h4 class="page-title"><%= t('.title') %></h4>
    <p class="text-muted page-title-alt"><%= t('.subtitle') %></p>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <div class="card-box">
      <div class="row">
        <div class="col-lg-12">

          <table class="table table-bordered m-0">

            <thead>
              <tr>
                <th>#</th>
                <th><%= User.human_attribute_name(:sponsor) %></th>
                <th><%= User.human_attribute_name(:username) %></th>
                <th><%= User.human_attribute_name(:email) %></th>
                <th><%= User.human_attribute_name(:binary_position) %></th>
                <th><%= User.human_attribute_name(:created_at) %></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% users.each do |user| %>
                <tr>
                  <th><%= user.id %></th>
                  <td><%= user.sponsor.try :username %></td>
                  <td><%= user.username %></td>
                  <td><%= user.email %></td>
                  <td><%= user.binary_position %></td>
                  <td><%= l user.created_at, format: :short %></td>
                  <td>
                    <%= link_to backoffice_admin_user_path(user), title: 'Ver perfil' do %>
                      <i class="fa fa-eye"></i>
                    <% end %>
                    <%= link_to masquerade_path(user), title: 'Logar como usuÃ¡rio' do %>
                      <i class="fa fa-user"></i>
                    <% end %>
                  </td>
                </tr>
              <% end %>
              <% if users.empty? %>
                <tr>
                  <td colspan="7" class="text-center"><%= t('.no_data') %></td>
                </tr>
              <% end %>
            </tbody>
          </table>

          <%= paginate users %>

        </div>
      </div>
    </div>
  </div>
</div>
