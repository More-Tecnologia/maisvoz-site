<div class="row">
  <div class="col-md-4 col-lg-4">
      <div class="profile-detail card-box">
          <div>
              <%= user.avatar_image_tag %>

              <ul class="list-inline status-list m-t-20">
                  <li>
                      <h3 class="text-primary m-b-5"><%= number_with_delimiter user.left_pv %></h3>
                      <p class="text-muted"><%= t('.left_pv') %></p>
                  </li>

                  <li>
                      <h3 class="text-success m-b-5"><%= number_with_delimiter user.right_pv %></h3>
                      <p class="text-muted"><%= t('.right_pv') %></p>
                  </li>
              </ul>

              <button type="button" class="btn btn-pink btn-custom btn-rounded waves-effect waves-light">
                <%= user.career_name %>
              </button>

              <hr>

              <div class="text-left">
                  <p class="text-muted font-13"><strong><%= t('.sponsor') %>:</strong> <span class="m-l-15"><%= link_to(user.sponsor.username, backoffice_admin_user_path(user.sponsor)) if user.sponsor.present? %></span></p>

                  <p class="text-muted font-13"><strong><%= t('.name') %>:</strong> <span class="m-l-15"><%= user.name %></span></p>

                  <p class="text-muted font-13"><strong><%= t('.birthdate') %>:</strong> <span class="m-l-15"><%= user.long_birthdate %></span></p>

                  <p class="text-muted font-13"><strong><%= t('.skype') %>:</strong> <span class="m-l-15"><%= user.skype %></span></p>

                  <p class="text-muted font-13"><strong><%= t('.phone') %>:</strong><span class="m-l-15"><%= user.phone %></span></p>

                  <p class="text-muted font-13"><strong><%= t('.document_cpf') %>:</strong> <span class="m-l-15"><%= user.document_cpf %></span></p>

                  <p class="text-muted font-13"><strong><%= t('.email') %>:</strong> <span class="m-l-15"><%= user.email %></span></p>

                  <p class="text-muted font-13"><strong><%= t('.address') %>:</strong> <span class="m-l-15"><%= user.pretty_address %></span></p>

              </div>

          </div>

      </div>

  </div>

  <div class="col-md-8">
    <div class="row">
      <div class="col-lg-6 col-sm-6">
        <div class="widget-panel widget-style-2 bg-white">
          <i class="md md-attach-money text-success"></i>
          <h2 class="m-0 text-dark counter font-600"><span><%= user.available_balance %></span></h2>
          <div class="text-muted m-t-5"><%= t('.available_balance') %></div>
        </div>
      </div>
      <div class="col-lg-6 col-sm-6">
        <div class="widget-panel widget-style-2 bg-white">
          <i class="md md-attach-money text-warning"></i>
          <h2 class="m-0 text-dark counter font-600"><span><%= user.blocked_balance %></span></h2>
          <div class="text-muted m-t-5"><%= t('.blocked_balance') %></div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-6 col-sm-6">
          <div class="widget-panel widget-style-2 bg-white">
              <i class="md md-account-child text-custom"></i>
              <h2 class="m-0 text-dark counter font-600"><span><%= user.sponsored_count %></span></h2>
              <div class="text-muted m-t-5"><%= t('.direct_users') %></div>
          </div>
      </div>
    </div>
  </div>

</div>
