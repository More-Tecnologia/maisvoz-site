<!-- Page-Title -->
<div class="row">
  <div class="col-sm-12">
    <h4 class="page-title m-b-30"><%= t('.title') %></h4>
  </div>
</div>

<%= render 'filters', q: @q %>

<div class="row">
  <div class="col-sm-12">
    <div class="card-box">
      <div class="row">
        <div class="col-lg-12">
          <div class="table-responsive">
            <table class="table table-striped table-bordered toggle-circle m-b-0">

              <thead>
                <tr>
                  <th>#</th>
                  <th><%= User.human_attribute_name(:name) %></th>
                  <th><%= User.human_attribute_name(:registration_type) %></th>
                  <th><%= Withdrawal.human_attribute_name(:fiscal_document_link) %></th>
                  <th><%= t('attributes.document') %></th>
                  <th><%= t('attributes.bank') %></th>
                  <th><%= t('attributes.bank_account') %></th>
                  <th><%= t('attributes.bank_agency') %></th>
                  <th><%= sort_link(@q, :gross_amount_cents, Withdrawal.human_attribute_name(:gross_amount)) %></th>
                  <th><%= sort_link(@q, :net_amount_cents, Withdrawal.human_attribute_name(:net_amount)) %></th>
                  <th><%= sort_link(@q, :status, Withdrawal.human_attribute_name(:status)) %></th>
                  <th><%= sort_link(@q, :created_at, Withdrawal.human_attribute_name(:created_at), default_order: :desc) %></th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                <% @withdrawals.each do |withdraw| %>
                  <tr>
                    <th><%= withdraw.id %></th>
                    <th><%= link_to withdraw.user.name, backoffice_support_user_path(withdraw.user) %></th>
                    <th><%= t withdraw.user.registration_type %></th>
                    <th>
                      <%= link_to('Link', withdraw.fiscal_document_link, target: '_blank') if withdraw.fiscal_document_link.present? %>
                      <% if withdraw.fiscal_document_photo? %>
                        <%= link_to withdraw.fiscal_document_photo.fullpath, target: '_blank' do %>
                          <i class="fa fa-link"></i>
                        <% end %>
                      <% end %>
                    </th>
                    <td><%= withdraw.user.decorate.main_document %></td>
                    <td><%= "#{withdraw.user.bank_name} - #{withdraw.user.bank_code} - #{withdraw.user.bank_account_type}" %></td>
                    <td><%= withdraw.user.bank_account %></td>
                    <td><%= withdraw.user.bank_agency %></td>
                    <td><%= number_to_currency withdraw.gross_amount_cents %></td>
                    <td><%= number_to_currency withdraw.net_amount_cents %></td>
                    <td><%= withdraw.pretty_status %></td>
                    <td><%= l withdraw.created_at, format: :short %></td>
                    <td>
                      <% if withdraw.pending? %>
                        <%= link_to(
                          backoffice_admin_withdrawal_path(withdraw, status: Withdrawal.statuses[:approved]),
                          method: :put,
                          data: { confirm: t('.approve_withdraw') },
                          class: 'm-r-10'
                          ) do %>
                          <i class="icon-like"></i>
                        <% end %>
                        <%= link_to(
                          backoffice_admin_withdrawal_path(withdraw, status: Withdrawal.statuses[:refused]),
                          method: :put,
                          data: { confirm: t('.refuse_withdraw') }
                          ) do %>
                          <i class="icon-dislike"></i>
                        <% end %>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
                <% if @withdrawals.empty? %>
                  <tr>
                    <td colspan="10" class="text-center"><%= t('.no_data') %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
          <%= paginate @withdrawals %>

        </div>
      </div>
    </div>
  </div>
</div>
