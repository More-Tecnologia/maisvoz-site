<div class="cart-courses__item">
  <div class="cart-courses__id">
    <div class="cart-courses__item__id__title">
      ID
    </div>
    <div class="cart-courses__item__id__number">
      <%= order_item.product.hashid %><br>
      <%= order_item.product.name %><br>
    </div>
  </div>
  <div class="cart-courses__item__image">
    <img src="<%= order_item.ad.path %>" />
  </div>
  <div class="cart-courses__item__texts">
    <%= render 'layouts/shared/reputation' %>
    <div class="cart-courses__item__text">
      <p><%= order_item.ad.title.truncate(60, separator: ' ') %></p><br>
      <p><%= order_item.ad.description.truncate(60, separator: ' ') %></p><br>
      <p><%= order_item.ad.link.truncate(60, separator: ' ') %></p>
    </div>
  </div>
  <div class="container-cart-clicks">
      <span>Quantity of Clicks</span>
      <%= order_item.product.clicks %> <%= t(:clicks) %>
  </div>
  <div class="cart-courses__item__value">
    <span><%= number_to_currency(order_item.product.price) %></span>
  </div>
  <%= link_to backoffice_ads_carts_path(order_item_id: order_item.id), method: :delete, class: "cart-courses__item__delete" do %>
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="red" class="bi bi-trash-fill" viewbox="0 0 16 16">
      <path
        d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z"/>
    </svg>
  <% end %>
</div>
