<div class="row">
  <div class="col-sm-12 m-b-10">
    <h4 class="page-title"><%= t('.title') %></h4>
  </div>
</div>
<div class="row">
  <div class="col-sm-12 m-b-23">
    <%= render partial: 'backoffice/balance_transferences/search_user_form' %>
  </div>
</div>
<div class="row">
  <div class="col-sm-12 m-b-10">
    <h4 class="page-title"><%= t('.transferences') %></h4>
  </div>
</div>
<div class="row">
  <div class="col-sm-12">
    <div class="card-box">
      <div class="row">
        <div class="col-sm-12 m-b-5">
          <%= render partial: 'backoffice/balance_transferences/filters' %>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-12">
          <div class="table-responsive">
          <table class="table table-striped table-bordered m-0">
            <thead>
              <tr>
                <th>#</th>
                <th><%= Order.human_attribute_name(:user) %></th>
                <th><%= Order.human_attribute_name(:email) %></th>
                <th><%= Order.human_attribute_name(:amount) %></th>
                <th><%= Order.human_attribute_name(:transfer_at) %></th>
              </tr>
            </thead>
            <tbody>
              <%= render collection: @financial_transactions,
                         partial: 'backoffice/balance_transferences/transference',
                         as: :transaction %>
            </tbody>
          </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
