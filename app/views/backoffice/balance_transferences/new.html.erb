<div class="row">
  <div class="col-sm-12 m-b-10">
    <h4 class="page-title"><%= t('.title') %></h4>
  </div>
</div>
<div class="row">
  <div class="col-sm-12">
    <div class="card-box">
      <div class="row">
        <%= render partial: 'backoffice/balance_transferences/user',
                   locals: { user: @destination_user } %>
      </div>
    </div>
  </div>
</div><div class="panel panel-border panel-custom">
  <div class="panel-body">
    <%= form_tag backoffice_balance_transferences_path do %>
    <%= hidden_field_tag :username, params[:username] %>
    <%= hidden_field_tag :email, params[:email] %>
      <div class="row m-b-30">
        <div class="col-sm-12">
          <%= label_tag t('attributes.amount') %>
          <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-dollar"></i></span>
            <%= number_field_tag :cent_amount,
                                 '',
                                 class: 'form-control',
                                 required: true,
                                 placeholder: '',
                                 min: Financial::BalanceTransferenceService::TRANSFER_VALUE_MINIMUM.to_s,
                                 max: [current_user.available_balance.to_i, 0].max.to_s %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-12">
          <%= label_tag t('attributes.password') %>
          <%= password_field_tag :password, '', class: 'form-control',
                                                required: true,
                                                placeholder: '' %>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-2">
          <label> &nbsp; </label><br>
          <%= submit_tag t('helpers.submit.transfer').capitalize,
                         class: 'form-control btn btn-default' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
