<%= stylesheet_link_tag 'click-tok-theme/orders' %>

<div class="page">
  <a class="back-button" href="/backoffice/dashboard?locale=en">
    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
    <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z"/>
    </svg>
  </a>
  <div class="card-order margin-bottom">
    <div class="is-page-title">
      <span class="title">
        <%= t(:tasks_history) %> - <%= @banners_clicks.total_count %>
      </span>
      <span class="title">
        <%= t(:filter) %>
      </span>
    </div>

    <% @banners_clicks.each do |banner_click| %>
      <div class="th-history-list">
        <div class="th-history-task-title wr-title">
          <span class="th-history-task-id">
            <%= banner_click.id %>
          </span>
          <span>
            <%= t(:campaign) %> <%= banner_click.banner_id %>
            </span>
        </div>
        <div class="th-history-task-status">
          <div class="th-history-task-date">
            <%= banner_click.created_at.strftime('%d/%m/%y') %>
          </div>
          <div class="wr-align">
            <div class="th-history-task-status-action task-history-sucess">
              <%= t(:completed) %>
            </div>
            <div class="wr-amount">
              <%= format_cent_amount_value(banner_click.financial_transaction) if banner_click.financial_transaction %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    <div class="row">
      <div class="col-sm-12">
        <%= paginate @banners_clicks %>
      </div>
    </div>
  </div>
</div>
