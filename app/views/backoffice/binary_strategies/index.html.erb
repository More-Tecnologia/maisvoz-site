<!-- Page-Title -->
<div class="row">
  <div class="col-sm-12">
    <h4 class="page-title"><%= t('.title') %></h4>
    <p class="text-muted page-title-alt"><%= t('.subtitle') %></p>
  </div>
</div>

<%= simple_form_for form, url: backoffice_binary_strategies_path do |f| %>
<div class="row">
  <div class="col-sm-12">
    <div class="card-box">
      <h4 class="m-t-0 header-title"><b><%= t('.default_strategy') %></b></h4>
      <p class="text-muted m-b-30 font-13"><%= t('.default_strategy_sub') %></p>
      <div class="row">
        <div class="col-lg-12">
          <div class="radio-btn-collection">
            <%= f.collection_radio_buttons(
              :binary_strategy,
              User.binary_strategies,
              :first,
              :last,
              item_wrapper_tag: nil
            ) do |b| %>
              <div class="radio radio-info form-check-inline m-r-15">
                <%= b.radio_button %>
                <%= b.label { t(b.text) } %>
              </div>
            <% end %>
          </div>
          <br>
          <%= f.submit t('.save'), class: 'btn btn-default' %>
        </div>
      </div>

    </div>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <div class="card-box">
      <h4 class="m-t-0 header-title"><b><%= t('.indicated_strategy') %></b></h4>
      <p class="text-muted m-b-30 font-13"><%= t('.indicated_strategy_sub') %></p>

      <table id="table-filtering" class="table table-striped table-bordered toggle-circle m-b-0">
          <thead>
              <tr>
                  <th>Login</th>
                  <th>Nome</th>
                  <th>Data de Entrada</th>
                  <th>Posição</th>
              </tr>
          </thead>
          <div class="form-inline m-b-20">
              <div class="row">
                  <div class="col-md-6">
                      <div class="form-group float-left">
                          <input id="table-search" type="text" placeholder="Buscar" class="form-control" autocomplete="on">
                      </div>
                  </div>

              </div>
          </div>
          <tbody>

            <% form.sponsored_users_not_in_binary.each do |u| %>
              <tr>
                <td><%= u.username %></td>
                <td><%= u.name %></td>
                <td><%= u.created_at %></td>
                <td>
                  <%= collection_radio_buttons(
                    'binary_strategy_form[binary_positions]',
                    u.id,
                    User.binary_positions,
                    :first,
                    :last,
                    { checked: u.binary_position,
                      item_wrapper_tag: nil,
                     },
                  ) do |b| %>
                    <div class="radio radio-info form-check-inline m-r-15 radio-inline">
                      <%= b.radio_button %>
                      <%= b.label { t(b.text) } %>
                    </div>
                  <% end %>
                </td>
              </tr>
            <% end %>

          </tbody>

          <tfoot>

              <tr class="active">
                  <td colspan="12">
                      <div class="text-right float-right">
                          <ul class="pagination pagination-split footable-pagination"></ul>
                      </div>
                  </td>
              </tr>

          </tfoot>

      </table>

      <br>
      <%= f.submit t('.save'), class: 'btn btn-default' %>

    </div>
  </div>
</div>
<% end %>
