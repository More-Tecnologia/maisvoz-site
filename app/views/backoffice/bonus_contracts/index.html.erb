<!-- Page-Title -->
<div class="row">
  <div class="col-sm-12 m-b-23">
    <h4 class="page-title"><%= t('defaults.bonus_contracts') %></h4>
  </div>
</div>

<%= render 'filters' %>

<div class="row">
  <div class="col-sm-12">
    <div class="card-box">
      <div class="row">
        <div class="col-lg-12">
          <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover m-0">
              <thead>
                <tr>
                  <th>#</th>
                  <th><%= Score.human_attribute_name(:description) %></th>
                  <th><%= Score.human_attribute_name(:amount) %></th>
                  <th><%= Score.human_attribute_name(:order) %></th>
                  <th><%= Score.human_attribute_name(:contract_balance) %></th>
                  <th><%= Score.human_attribute_name(:in_date) %></th>
                  <th><%= Score.human_attribute_name(:expire_at) %></th>
                  <th><%= Score.human_attribute_name(:processed_at) %></th>
                </tr>
              </thead>
              <tbody>
                <% if @bonus_contracts.any? %>
                  <% cent_amount_sum = sum_previous_contract_by(:remaining_balance, @q, @bonus_contracts) %>
                  <% @bonus_contracts.each do |bonus_contract| %>
                    <% order = bonus_contract.try(:order) %>
                    <tr>
                      <td> <%= bonus_contract.hashid %></td>
                      <td> <%= order.products.map(&:name).join(', ') %></td>
                      <td> <%= number_to_currency(bonus_contract.cent_amount) %></td>
                      <td> <%= link_to(order.try(:hashid), backoffice_order_path(order)) if order %></td>
                      <td> <%= number_to_currency(cent_amount_sum) %></td>
                      <% cent_amount_sum -= bonus_contract.cent_amount %>
                      <td> <%= l(bonus_contract.try(:created_at), format: :short) %></td>
                      <td><%= l(bonus_contract.expire_at, format: :long) if bonus_contract.expire_at %></td>
                      <td><%= l(bonus_contract.paid_at, format: :long) if bonus_contract.paid_at %></td>
                    </tr>
                  <% end %>
                <% else %>
                  <tr>
                    <td colspan="50" class="text-center"><%= t('helpers.no_data') %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
          <%= paginate @bonus_contracts if @bonus_contracts.any? %>
        </div>
      </div>
    </div>
  </div>
</div>
