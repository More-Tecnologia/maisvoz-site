<!-- Page-Title -->
<div class="row">
  <div class="col-sm-12 m-b-23">
    <h4 class="page-title"><%= t('defaults.bonus_contracts') %></h4>
  </div>
</div>

<%= render 'filters' %>

<div class="row">
  <div class="col-sm-12">
    <div class="card-box">
      <div class="row">
        <div class="col-lg-12">
          <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover m-0">
              <thead>
                <tr>
                  <th>#</th>
                  <th><%= Score.human_attribute_name(:amount) %></th>
                  <th><%= Score.human_attribute_name(:received_balance) %></th>
                  <th><%= Score.human_attribute_name(:remaining_balance) %></th>
                  <th><%= Score.human_attribute_name(:order) %></th>
                  <th><%= Score.human_attribute_name(:created_at) %></th>
                  <th><%= Score.human_attribute_name(:status) %></th>
                  <th><%= Score.human_attribute_name(:expire_at) %></th>
                  <th><%= Score.human_attribute_name(:paid_at) %></th>
                </tr>
              </thead>
              <tbody>
                <% if @bonus_contracts.any? %>
                  <% cent_amount_sum = sum_previous_contract_cent_amount(@q, @bonus_contracts) %>
                  <% @bonus_contracts.each do |bonus_contract| %>
                    <tr>
                      <td> <%= number_with_delimiter(bonus_contract.cent_amount) %></td>
                      <td> <%= number_with_delimiter(cent_amount_sum) %></td>
                      <% cent_amount_sum -= bonus_contract.cent_amount %>
                      <td><%= bonus_contract.try(:order).try(:hashid) %></td>
                      <td><%= l(bonus_contract.try(:created_at), format: :short) %></td>
                      <td><%= bonus_contract_status(bonus_contract) %></td>
                      <td><%= l(bonus_contract.expire_at, format: :long) if bonus_contract.expire_at %></td>
                      <td><%= l(bonus_contract.paid_at, format: :long) if bonus_contract.paid_at %></td>
                    </tr>
                  <% end %>
                <% else %>
                  <tr>
                    <td colspan="50" class="text-center"><%= t('helpers.no_data') %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
          <%= paginate @bonus_contracts if @bonus_contracts.any? %>
        </div>
      </div>
    </div>
  </div>
</div>
