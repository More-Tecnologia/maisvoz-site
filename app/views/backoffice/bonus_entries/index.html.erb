<!-- Page-Title -->
<div class="row">
  <div class="col-sm-12">
    <h4 class="page-title"><%= t('.title') %></h4>
    <p class="text-muted page-title-alt"><%= t('.subtitle') %></p>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <div class="card-box">
      <div class="row">
        <div class="col-lg-12">

          <table class="table table-bordered m-0">

            <thead>
              <tr>
                <th>#</th>
                <th><%= FinancialEntry.human_attribute_name(:from_user) %></th>
                <th><%= FinancialEntry.human_attribute_name(:to_user) %></th>
                <th><%= FinancialEntry.human_attribute_name(:kind) %></th>
                <th><%= FinancialEntry.human_attribute_name(:amount) %></th>
                <th><%= FinancialEntry.human_attribute_name(:created_at) %></th>
              </tr>
            </thead>
            <tbody>
              <% bonus_entries.each do |bonus_entry| %>
                <tr>
                  <th><%= bonus_entry.id %></th>
                  <td><%= bonus_entry.from_user.username if bonus_entry.from_user %></td>
                  <td><%= bonus_entry.to_user.username %></td>
                  <td><%= t "defaults.#{bonus_entry.kind}" %></td>
                  <td><%= decorate_amount bonus_entry.amount %></td>
                  <td><%= l bonus_entry.created_at, format: :short %></td>
                </tr>
              <% end %>
              <% if bonus_entries.empty? %>
                <tr>
                  <td colspan="7" class="text-center"><%= t('.no_data') %></td>
                </tr>
              <% end %>
            </tbody>
          </table>

          <%= paginate bonus_entries %>

        </div>
      </div>
    </div>
  </div>
</div>
