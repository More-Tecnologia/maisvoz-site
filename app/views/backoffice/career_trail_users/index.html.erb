<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
<!-- Page-Title -->
<div class="row">
  <div class="col-sm-12 m-b-23">
    <h4 class="page-title"><%= t('.title') %></h4>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <div class="card-box">
      <div class="row">
        <div class="col-lg-12">
          <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover m-0">
              <thead>
                <% trail_count = Trail.count %>
                <tr>
                  <th><%= t('attributes.career') %></th>
                  <th><%= t('attributes.trail') if trail_count > 1 %></th>
                  <th><%= t('defaults.qualification_date') %></th>
                </tr>
              </thead>
              <tbody>
                <% @career_trail_users.each do |career_trail_user| %>
                  <tr>
                    <th><%= career_trail_user.try(:career_trail).try(:career).try(:name) %></th>
                    <td><%= career_trail_user.try(:career_trail).try(:trail).try(:name) if trail_count > 1 %></td>
                    <td><%= l(career_trail_user.created_at, format: '%m/%d/%Y') if career_trail_user.created_at %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
