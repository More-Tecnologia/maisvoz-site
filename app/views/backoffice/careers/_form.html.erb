<%= simple_form_for(form, url: url, method: method, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.input :name %>
  <%= f.input :avatar %>
  <%= f.input :qualifying_score %>
  <%= f.input :bonus %>
  <%= f.input :binary_limit %>
  <%= f.input :order %>
  <%= f.button :button, t("defaults.#{method}"), data: { disable_with: "<i class='fa fa-spinner fa-spin'></i> Saving...".html_safe } %>
<% end %>
