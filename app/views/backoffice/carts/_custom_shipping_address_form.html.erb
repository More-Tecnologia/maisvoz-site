<div class="form-group">
  <%= form.label :custom_shipping_address_country,
                 class: 'col-sm-2 control-label checkout-control-label' %>
  <div class="col-sm-4">
    <%= form.country_select :custom_shipping_address_country,
                            { include_blank: true, only: current_order_shipping_countries },
                            class: 'form-control checkout-form-control country-shipping' %>
    <%= error_messages(form.object, :custom_shipping_address_country) %>
  </div>
  <%= form.label :custom_shipping_address_postal_code,
                 class: 'col-sm-2 control-label checkout-control-label' %>
  <div class="col-sm-4">
    <%= form.text_field :custom_shipping_address_postal_code,
                        class: 'form-control checkout-form-control',
                        id: 'custom-shipping-address-postal-code' %>
    <%= error_messages(form.object, :custom_shipping_address_postal_code) %>
  </div>
</div>
