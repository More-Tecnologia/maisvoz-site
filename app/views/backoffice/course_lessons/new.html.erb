<%= stylesheet_link_tag 'click-tok-theme/courses' %>
<%= stylesheet_link_tag 'click-tok-theme/add-courses' %>
<%= stylesheet_link_tag 'click-tok-theme/my-courses' %>

<div class="container-my-courses">
  <div class="top-new-courses">
    <a href="#" class="btn-return">
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="white" class="bi bi-arrow-left" viewbox="0 0 16 16">
        <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z"/>
      </svg>
    </a>
    <span>Voltar</span>
  </div>
  <div class="container-mid-my-courses">
    <span>Meu Curso</span>
    <div class="course">
      <div class="id-course">
        <span>ID</span>
        <span>002</span>
      </div>
      <div class="img-course"></div>
      <p class="course-description">Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt.</p>
    </div>
  </div>
  <div class="container-add-lessons">
    <span>Adicionar Aulas</span>
    <form class="form-add-lessons" action="index.html" method="post">
      <label for="cover-course-img" class="cover-course-img_label" style="margin: auto;">
        <div class="cover-course-img_label">
          <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="grey" class="bi bi-image" viewbox="0 0 16 16">
            <path d="M6.002 5.5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0z"/>
            <path d="M2.002 1a2 2 0 0 0-2 2v10a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V3a2 2 0 0 0-2-2h-12zm12 1a1 1 0 0 1 1 1v6.5l-3.777-1.947a.5.5 0 0 0-.577.093l-3.71 3.71-2.66-1.772a.5.5 0 0 0-.63.062L1.002 12V3a1 1 0 0 1 1-1h12z"/>
          </svg>
        </div>
        <input id="cover-course-img" type="file" name="" value="">
      </label>
      <span class="size-course-img" style="margin: auto;">Ideal 500 x 300</span>
      <div class="container-preview">
        <div class="form-check">
          <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
          <label class="form-check-label" for="flexCheckDefault">
            Prévia
          </label>
        </div>
      </div>
      <div class="login-fields user-field">
        <div class="field-icon">
          <%= image_tag('courses/add-course1.svg') %>
        </div>
        <input class="input-description" type="text" placeholder="Name">
      </div>
      <div class="login-fields user-field">
        <div class="field-icon">
          <%= image_tag('courses/add-course3.svg') %>
        </div>
        <input class="input-description" type="text" placeholder="Descrição">
      </div>
      <div class="login-fields user-field">
        <div class="field-icon">
          <%= image_tag('courses/menu-courses2.svg') %>
        </div>
        <input class="input-description" type="text" placeholder="URL do vídeo">
      </div>
      <div class="container-attachments">
        <span>Anexos</span>
        <label for="course-files" class="btn-choose-files">
          <input type="file" name="" value="" id="course-files">
          Choose Files
        </label>
      </div>
      <button type="button" name="button" class="btn-resume-lessons">Adicionar</button>
      <div class="container-resume">
        <span>Resumo</span>
      </div>
      <div class="container-lessons">
        <div class="container-lesson">
          <div class="container-top-lesson">
            <div class="id-lesson">
              01 - Aula 1
            </div>
