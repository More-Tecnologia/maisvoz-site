<%= stylesheet_link_tag 'click-tok-theme/dashboard/banners' %>
<%= stylesheet_link_tag 'click-tok-theme/libraries/owlcarousel/owl.carousel.min' %>

<div class="owl-carousel dashboard-banner-container <%= defined?(premium) ? 'dashboard-banner-container-premium' : 'dashboard-banner-container-basic' %>">
  <% banners.shuffle.last(12).each do |banner| %>    
    <%= link_to backoffice_banner_clicks_path(banner_id: banner.id), 
                class: 'item dashboard-banner-item',             
                method: :post,
                remote: true,
                title: banner.title + "\n " + banner.description do %>          
      <% if defined? premium %>
        <span class="dashboard-banner-title">
          <%= banner.title %>
        </span> 
      <% end %>      
      <%= image_tag(banner.path.present? ? banner.path: banner.image_pat, class: 'dashboard-banner-image') %>
    <% end %>    
  <% end %>
</div>

<%= javascript_include_tag 'click-tok-theme/libraries/owlcarousel/owl.carousel.min.js' %>
<script>
$('.dashboard-banner-container-premium').owlCarousel({
  loop:true,
  margin:0,
  responsiveClass:true,
  nav: true,
  navText : ['<b class="banner-left-buttom-premium"><</b>',
    '<b class="banner-right-buttom-premium">></b>'],
  responsive:{
    0:{
        items:3,
        nav:true
    },
    400:{
        items:3,
        nav:true
    },
      800:{
        items:4,
        nav:true
    },
    1000:{
        items:5,
        nav:true,
        loop:true
    }
  }
})

$('.dashboard-banner-container-basic').owlCarousel({
  loop:true,
  margin:0,
  responsiveClass:true,
  nav: true,
  navText : ['<b class="banner-left-buttom"><</b>',
    '<b class="banner-right-buttom">></b>'],
  responsive:{
    0:{
        items:4,
        nav:true
    },
    600:{
        items:6,
        nav:true
    },
      800:{
        items:8,
        nav:true
    },
    1000:{
        items:10,
        nav:true,
        loop:true
    }
  }
})
</script>
