<%= stylesheet_link_tag 'deposits/new' %>

<div class="wrapper-page" id="wrapper-page-login">
  <div class="text-center register-logo">
    <%= image_tag 'logo-alternative.png' %>
  </div>
  <br>
  <div class=" card-box">
    <div class="panel-body">
      <%= simple_form_for(current_deposit.order_items.first,
                          url: backoffice_deposits_path,
                          action: :create,
                          method: :post,
                          html: { class: 'form-horizontal m-t-20'} ) do |f| %>
        <div class="form-group">
          <%= content_tag(:h2, t(:deposit),
                               class: 'text-center text-uppercase',
                               style: 'margin-top: -3.5rem!important; font-weight: bolder!important;') %>
          <%= f.input_field :quantity,
                            collection: valid_deposit_options,
                            class: "form-control",
                            prompt: t('helpers.select.prompt'),
                            style: 'min-width: 100%;',
                            required: true %>
        </div>
        <div class="form-actions">
          <%= f.button :button,
                       t("defaults.post"),
                       data: { disable_with: t('helpers.save_with_disable') },
                       class: 'btn-lg btn-block text-uppercase' %>
        </div>
        <% end %>
    </div>
  </div>
</div>
