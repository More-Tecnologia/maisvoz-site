<div class="col-sm-12 m-b-23">
  <h4 class="page-title">Downloads</h4>
</div>

<div class="masonry-container">

  <% links.each do |link| %>
    <div class="filter apn" style="">
      <div class="card-box">
        <img src="" class="img-responsive">
        <div class="card-body">
          <h4 class="card-title"><%= link[:name] %></h4>
          <a type="button" class="btn btn-success waves-effect waves-light" href="<%= link[:url] %>" target="_blank">
            <span class="btn-label"><i class="md md-cloud-download"></i></span>Download
          </a>
        </div>
      </div>
    </div>
  <% end %>

</div>

<style>
.masonry-container {
  display: flex;
  flex-flow: row wrap;
  margin-left: -8px;
  width: 100%;
}

.apn {
  flex: auto;
  width: 280px;
  margin: 0 8px 8px 0;
}

.apn .card-box {
  margin-bottom: 0;
  height: 150px;
}
</style>
