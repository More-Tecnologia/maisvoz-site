<%= stylesheet_link_tag 'click-tok-theme/financial_dashboard' %>

<div>
  <div class="page">
    <div class="f-balance-area">
      <div class="balance-title">
        <%= t(:available_balance) %>
      </div>

      <div class="balance-value">
        <%= number_to_currency(current_user.available_balance, unit: ENV['CURRENT_CURRENCY'], precision: 2).gsub('USD ', '$') %>
      </div>
    </div>

    <%= link_to backoffice_raffle_third_parties_carts_path do %>
      <div class="f-third-party-area">
        <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="white" class="bi bi-cash-coin" viewBox="0 0 16 16">
