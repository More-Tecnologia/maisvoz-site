          <path d="M9.998 5.083 10 5a2 2 0 1 0-3.132 1.65 5.982 5.982 0 0 1 3.13-1.567z"/>
        </svg>
        <%= t(:pay_third_party_orders) %>
      </div>
    <% end %>

    <%= link_to new_backoffice_withdrawal_path do %>
      <div class="f-withdraw-area">

        <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="white" class="bi bi-cash-coin" viewBox="0 0 16 16">
          <path fill-rule="evenodd" d="M11 15a4 4 0 1 0 0-8 4 4 0 0 0 0 8zm5-4a5 5 0 1 1-10 0 5 5 0 0 1 10 0z"/>
          <path d="M9.438 11.944c.047.596.518 1.06 1.363 1.116v.44h.375v-.443c.875-.061 1.386-.529 1.386-1.207 0-.618-.39-.936-1.09-1.1l-.296-.07v-1.2c.376.043.614.248.671.532h.658c-.047-.575-.54-1.024-1.329-1.073V8.5h-.375v.45c-.747.073-1.255.522-1.255 1.158 0 .562.378.92 1.007 1.066l.248.061v1.272c-.384-.058-.639-.27-.696-.563h-.668zm1.36-1.354c-.369-.085-.569-.26-.569-.522 0-.294.216-.514.572-.578v1.1h-.003zm.432.746c.449.104.655.272.655.569 0 .339-.257.571-.709.614v-1.195l.054.012z"/>
          <path d="M1 0a1 1 0 0 0-1 1v8a1 1 0 0 0 1 1h4.083c.058-.344.145-.678.258-1H3a2 2 0 0 0-2-2V3a2 2 0 0 0 2-2h10a2 2 0 0 0 2 2v3.528c.38.34.717.728 1 1.154V1a1 1 0 0 0-1-1H1z"/>
          <path d="M9.998 5.083 10 5a2 2 0 1 0-3.132 1.65 5.982 5.982 0 0 1 3.13-1.567z"/>
        </svg>
        <%= t(:request_withdraw) %>
      </div>
    <% end %>

    <div class="products-list full-box">
      <%= link_to backoffice_withdrawals_path do %>
        <div class="f-options-box f-options-box-l">
          <div class="f-box-title">
            <%= t(:withdrawal_report) %>
          </div>
          <div class="f-box-icon">
              <%= image_tag 'icons/withdrawal.svg' %>
          </div>
        </div>
      <% end %>
      <%= link_to backoffice_financial_transactions_path do %>
        <div class="f-options-box f-options-box-r">
          <div class="f-box-title">
            <%= t(:earnings_report) %>
          </div>
          <div class="f-box-icon">
              <%= image_tag 'icons/gains.svg' %>
          </div>
        </div>
      <% end %>
      <%= link_to backoffice_orders_path do %>
        <div class="f-options-box f-options-box-l">
          <div class="f-box-title">
            <%= t('defaults.my_orders') %>
          </div>
          <div class="f-box-icon">
              <%= image_tag 'icons/orders.svg' %>
          </div>
        </div>
      <% end %>
      <%= link_to edit_backoffice_bank_account_path(current_user) do %>
        <div class="f-options-box f-options-box-r">
          <div class="f-box-title">
            <%= t(:my_wallet) %>
          </div>
          <div class="f-box-icon">
              <%= image_tag 'icons/wallet.svg' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
