<!-- Page-Title -->
<div class="row">
  <div class="col-sm-12 m-b-23">
    <h4 class="page-title"><%= t('.title') %></h4>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <div class="card-box">
      <div class="row">
        <div class="col-lg-12">

          <table class="table table-bordered table-hover m-0">

            <thead>
              <tr>
                <th>#</th>
                <th><%= FinancialEntry.human_attribute_name(:description) %></th>
                <th><%= FinancialEntry.human_attribute_name(:user) %></th>
                <th><%= FinancialEntry.human_attribute_name(:type) %></th>
                <th><%= FinancialEntry.human_attribute_name(:amount) %></th>
                <th><%= FinancialEntry.human_attribute_name(:balance) %></th>
                <th><%= FinancialEntry.human_attribute_name(:created_at) %></th>
              </tr>
            </thead>
            <tbody>
              <% financial_entries.each do |financial_entry| %>
                <tr>
                  <th><%= financial_entry.id %></th>
                  <th><%= financial_entry.description %></th>
                  <th><%= financial_entry.user.username %></th>
                  <td><%= t financial_entry.kind %></td>
                  <td><%= FinancialEntryAmountDecorator.new(financial_entry, current_user).amount %></td>
                  <td><%= number_to_currency financial_entry.balance %></td>
                  <td><%= l financial_entry.created_at, format: :short %></td>
                </tr>
              <% end %>
              <% if financial_entries.empty? %>
                <tr>
                  <td colspan="7" class="text-center"><%= t('.no_data') %></td>
                </tr>
              <% end %>
            </tbody>
          </table>

          <%= paginate financial_entries %>

        </div>
      </div>
    </div>
  </div>
</div>
