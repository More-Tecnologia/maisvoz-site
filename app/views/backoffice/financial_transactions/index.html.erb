<%= stylesheet_link_tag 'click-tok-theme/orders' %>

<div class="page">
  <div class="is-page-title">
    <span class="title">
      <%= t(:earnings_report) %>
    </span>
    <span class="title">
      <%= t(:filter) %>
    </span>
  </div>
  <% cent_amount_sum = sum_previous_financial_transactions_by_empreendedor(@q) %>
  <% @financial_transactions.each do |financial_transaction| %>
    <div class="th-history-list">
      <div class="th-history-task-title wr-title">
        <span class="th-history-task-id">
          <%= financial_transaction.hashid %> <%= t(:by) %>
          <%= financial_transaction.spreader.try(:username) %>
        </span>
        <%= financial_transaction.created_at.strftime('%d %b') %>
      </div>
      <div class="th-history-task-status">
        <div class="th-history-task-date">
          <%= financial_transaction.created_at.strftime('%d/%m/%y') %>
        </div>
        <div class="wr-align">
          <div class="th-history-task-status-action task-history-sucess">
            <%= format_financial_reason(financial_transaction) %>
          </div>
          <div class="wr-amount">
            <span><%= format_cent_amount_value(financial_transaction) %></span>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="t"></div>
  <div class="t"></div>
</div>
