<!-- Page-Title -->
<div class="row">
  <div class="col-sm-12 m-b-23">
    <h4 class="page-title"><%= t('.title') %></h4>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <%= render 'filters' %>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <div class="card-box">
      <div class="row">
        <div class="col-lg-12">
          <div class="table-responsive">
            <table class="table table-bordered m-0">
              <thead>
                <tr>
                  <th><%= Score.human_attribute_name(:height) %></th>
                  <th><%= Score.human_attribute_name(:cent_amount) %> </th>
                </tr>
              </thead>
              <tbody>
                <% @generation_scores.each do |generation, score_sum| %>
                  <tr>
                    <td><%= generation - 1 %>Ëš</td>
                    <td><%= number_with_delimiter score_sum %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
