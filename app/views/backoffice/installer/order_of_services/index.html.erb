<!-- Page-Title -->
<div class="row">
  <div class="col-sm-12">
    <h4 class="page-title m-b-30">Meus lançamentos de OS</h4>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <div class="card-box">

      <div class="row">
        <div class="col-lg-12">

          <table class="table table-striped table-bordered toggle-circle m-b-0">

            <thead>
              <tr>
                <th>#</th>
                <th>N˚ OS</th>
                <th>Cliente</th>
                <th>Total Bruto Produtos</th>
                <th>Total Líquido Produtos</th>
                <th>Total Bruto Serviços</th>
                <th>Total Líquido Serviços</th>
                <th>Lucro</th>
                <th>Criado em</th>
              </tr>
            </thead>
            <tbody>
              <% @order_of_services.each do |os| %>
                <tr>
                  <th><%= os.id %></th>
                  <th><%= os.os_number %></th>
                  <th><%= os.user.name %></th>
                  <th><%= number_to_currency os.gross_sales.to_d %></th>
                  <th><%= number_to_currency os.net_sales.to_d %></th>
                  <th><%= number_to_currency os.gross_service.to_d %></th>
                  <th><%= number_to_currency os.net_service.to_d %></th>
                  <th><%= number_to_currency os.profit.to_d %></th>
                  <td><%= l os.created_at, format: :short %></td>
                </tr>
              <% end %>
              <% if @order_of_services.empty? %>
                <tr>
                  <td colspan="8" class="text-center">Nenhum lançamento até o momento</td>
                </tr>
              <% end %>
            </tbody>
          </table>

          <%= paginate @order_of_services %>

        </div>
      </div>
    </div>
  </div>
</div>
