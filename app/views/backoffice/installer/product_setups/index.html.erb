<!-- Page-Title -->
<div class="row">
  <div class="col-sm-12">
    <h4 class="page-title m-b-30">Minhas instalações</h4>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <div class="card-box">

      <div class="row">
        <div class="col-lg-12">

          <table class="table table-striped table-bordered toggle-circle m-b-0">

            <thead>
              <tr>
                <th>#</th>
                <th><%= ProductSetup.human_attribute_name(:name) %></th>
                <th><%= ProductSetup.human_attribute_name(:document_cpf) %></th>
                <th><%= ProductSetup.human_attribute_name(:car_plate) %></th>
                <th><%= ProductSetup.human_attribute_name(:product) %></th>
                <th><%= ProductSetup.human_attribute_name(:status) %></th>
                <th><%= ProductSetup.human_attribute_name(:status_message) %></th>
                <th><%= ProductSetup.human_attribute_name(:created_at) %></th>
                <th><%= ProductSetup.human_attribute_name(:updated_at) %></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% product_setups.each do |setup| %>
                <tr>
                  <th><%= setup.hashid %></th>
                  <th><%= setup.name %></th>
                  <th><%= setup.document_cpf %></th>
                  <th><%= setup.car_plate %></th>
                  <th><%= setup.product_name %></th>
                  <th><%= t setup.status %></th>
                  <th><%= setup.status_message %></th>
                  <td><%= l setup.created_at, format: :short %></td>
                  <td><%= l setup.updated_at, format: :short %></td>
                  <td><%= link_to 'Detalhes', backoffice_installer_product_setup_path(setup) %></td>
                </tr>
              <% end %>
              <% if product_setups.empty? %>
                <tr>
                  <td colspan="10" class="text-center">Nenhuma instalação realizada até o momento</td>
                </tr>
              <% end %>
            </tbody>
          </table>

          <%= paginate product_setups %>

        </div>
      </div>
    </div>
  </div>
</div>
