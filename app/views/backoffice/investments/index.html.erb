<div class="row">
  <div class="col-md-12">
    <h1>Contas de Participação Future Motors</h1>
    <p>Escolha abaixo as oportunidades de negócios da Future Motors</p>
  </div>
</div>

  <% @investments.each do |investment| %>
    <div class="col-md-12 investment-card" style="border: 1px solid #c5c5c5; padding: 18px; background: white;">
      <h2><%= investment.name %></h2>

      <div class="col-md-4">
        <%= image_tag "investments/#{investment.type}.jpg", class: 'img-responsive' %>
      </div>

      <div class="col-md-4">
        <h4>Conta de Participação</h4>
        <p>Valor por conta</p>
        <div class="investment-card__price"><%= number_to_currency investment.price %></div>
      </div>

      <div class="col-md-4">
        <div class="col-md-12">
          <strong>Total de contas - <%= investment.shares_available %> disponíveis</strong>
        </div>
        <div class="col-md-12">
          <p>Selecione abaixo o total de contas de patrocínio que você quer adquirir</p>
        </div>
        <%= form_tag(buy_backoffice_investment_path(investment), method: :post, class: '') do %>
          <div class="col-xs-4">
            <input name="quantity" type="number" class="form-control" min="0" max="<%= investment.shares_available %>">
          </div>

          <div class="col-xs-6">
            <span class="investment-card__total"><%= number_to_currency investment.price %></span>
          </div>

          <div class="col-xs-12">
            <%= submit_tag 'Contratar', class: 'btn btn-primary btn-block m-t-10 visible-inline-block', data: { confirm: "Tem certeza que deseja comprar a quantidade escolhida?" } %>
          </div>
        <% end %>
      </div>

      <div class="col-md-8">
        <hr>
        <strong><i class="fas fa-phone"></i> Telefone:</strong> <%= investment.phone %>
        <strong class="m-l-15"><i class="fab fa-whatsapp"></i> WhatsApp:</strong> <%= investment.whatsapp %>
        <br>
        <strong><i class="fas fa-map-marker-alt"></i> Endereço:</strong> <%= investment.address %>
      </div>
    </div>
  <% end %>
