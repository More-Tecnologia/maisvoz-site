<!-- Page-Title -->
<div class="row">
  <div class="col-sm-12 m-b-23">
    <h4 class="page-title"><%= t('.title') %></h4>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <div class="card-box">
      <div class="row">
        <div class="col-lg-12">

          <table class="table table-striped table-bordered table-hover m-0">
            <thead>
              <tr>
                <th>#</th>
                <th><%= InvestmentShare.human_attribute_name(:name) %></th>
                <th><%= InvestmentShare.human_attribute_name(:type) %></th>
                <th><%= InvestmentShare.human_attribute_name(:status) %></th>
                <th><%= InvestmentShare.human_attribute_name(:quantity) %></th>
                <th><%= InvestmentShare.human_attribute_name(:amount) %></th>
                <th><%= InvestmentShare.human_attribute_name(:profit) %></th>
                <th><%= InvestmentShare.human_attribute_name(:created_at) %></th>
              </tr>
            </thead>
            <tbody>
              <% @investments.each do |share| %>
                <tr>
                  <td><%= share.id %></td>
                  <td><%= share.name %></td>
                  <td><%= t share.investment.type %></td>
                  <td><%= t share.status %></td>
                  <td><%= share.quantity %></td>
                  <td><%= number_to_currency share.gross_amount %></td>
                  <td><%= number_to_currency share.profit_amount %></td>
                  <td><%= l share.created_at, format: :short %></td>
                </tr>
              <% end %>
              <% if @investments.empty? %>
                <tr>
                  <td colspan="5" class="text-center"><%= t('.no_data') %></td>
                </tr>
              <% end %>
            </tbody>
          </table>

        </div>
      </div>
    </div>
  </div>
</div>
