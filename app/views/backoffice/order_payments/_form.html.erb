<div class="panel panel-border panel-custom">
  <div class="panel-body">
    <%= form_tag backoffice_order_payment_path(id: 1), remote: true, method: :get do %>
      <div class="row">
        <div class="col-xs-12 col-md-3">
          <div class="form-group">
            <%= label_tag t('attributes.order_code') %>
            <%= text_field_tag :order_id, '', class: 'form-control', required: true %>
          </div>
        </div>
        <div class="col-xs-12 col-md-3">
          <div class="form-group">
            <%= label_tag t('attributes.email') %>
            <%= email_field_tag :email, '', class: 'form-control', required: true %>
          </div>
        </div>
        <div class="col-xs-12 col-md-1">
          <div class="form-group">
            <label class="hidden-xs"> &nbsp; </label>
            <%= button_tag class: 'form-control btn btn-primary', type: 'submit' do %>
              <i class="fas fa-search"></i>
            <% end %>
          </div>
        </div>
      </div>
      <div class="row m-t-30 m-b-30" id="order-wrapper" style="display: none;">
        <div class="col-lg-12">
          <div class="table-responsive">
          <table class="table table-striped table-bordered m-0">
            <thead>
              <tr>
                <th>#</th>
                <th><%= Order.human_attribute_name(:user) %></th>
                <th><%= Order.human_attribute_name(:email) %></th>
                <th><%= Order.human_attribute_name(:total) %></th>
                <% if ENV['CURRENT_DIGITAL_CURRENCY'].present? %>
                <th><%= t('defaults.total_at', digital_currency: ENV['CURRENT_DIGITAL_CURRENCY']) %></th>
                <% end %>
                <th><%= Order.human_attribute_name(:status) %></th>
                <th><%= Order.human_attribute_name(:expire_at) %></th>
                <th><%= Order.human_attribute_name(:paid_at) %></th>
                <th></th>
              </tr>
            </thead>
            <tbody id="order">
            </tbody>
          </table>
          </div>
        </div>
      </div>
      <div class="row m-t-30" id="pay-order" style="display: none;">
        <div class="col-md-3">
          <%= label_tag t('attributes.password') %>
          <%= password_field_tag :password, '', class: 'form-control', required: true, placeholder: '' %>
        </div>
        <div class="col-md-1">
          <label> &nbsp; </label>
          <%= submit_tag t('helpers.submit.pay'), class: 'form-control btn btn-default', value: :pay %>
        </div>
      </div>
    <% end %>
  </div>
</div>
