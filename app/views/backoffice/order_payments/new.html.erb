<div class="row">
  <div class="col-sm-12 m-b-10">
    <h4 class="page-title"><%= t('.title') %></h4>
  </div>
</div>
<div class="row">
  <div class="col-sm-12">
    <div class="card-box">
      <div class="row">
        <div class="col-lg-12">
          <div class="table-responsive">
          <table class="table table-striped table-bordered m-0">
            <thead>
              <tr>
                <th>#</th>
                <th><%= Order.human_attribute_name(:user) %></th>
                <th><%= Order.human_attribute_name(:email) %></th>
                <th><%= Order.human_attribute_name(:total) %></th>
                <% if ENV['CURRENT_DIGITAL_CURRENCY'].present? %>
                <th><%= t('defaults.total_at', digital_currency: ENV['CURRENT_DIGITAL_CURRENCY']) %></th>
                <% end %>
                <th><%= Order.human_attribute_name(:status) %></th>
                <th><%= Order.human_attribute_name(:paid_at) %></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <%= render collection: [@order], partial: 'backoffice/order_payments/order' %>
            </tbody>
          </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div><div class="panel panel-border panel-custom">
  <div class="panel-body">
    <%= form_tag backoffice_order_payments_path do %>
    <%= hidden_field_tag :order_id, params[:order_id] %>
    <%= hidden_field_tag :email, params[:email] %>
      <div class="row">
        <div class="col-md-3">
          <%= label_tag t('attributes.password') %>
          <%= password_field_tag :password, '', class: 'form-control', required: true, placeholder: '' %>
        </div>
        <div class="col-md-1">
          <label> &nbsp; </label>
          <%= submit_tag t('helpers.submit.pay').capitalize, class: 'form-control btn btn-default', value: :pay %>
        </div>
      </div>
    <% end %>
  </div>
</div>
