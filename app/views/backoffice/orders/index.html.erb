<!-- Page-Title -->
<div class="row">
  <div class="col-sm-12 m-b-23">
    <h4 class="page-title"><%= t('views.backoffice.orders.index.title') %></h4>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <div class="card-box">
      <div class="row">
        <div class="col-lg-12">
          <div class="table-responsive">
          <table class="table table-striped table-bordered m-0">

            <thead>
              <tr>
                <th>#</th>
                <th><%= Order.human_attribute_name(:total) %></th>
                <% if ENV['CURRENT_DIGITAL_CURRENCY'].present? %>
                <th><%= t('defaults.total_at', digital_currency: ENV['CURRENT_DIGITAL_CURRENCY']) %></th>
                <% end %>
                <th><%= Order.human_attribute_name(:status) %></th>
                <th><%= Order.human_attribute_name(:expire_at) %></th>
                <th><%= Order.human_attribute_name(:paid_at) %></th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @orders.each do |order| %>
                <tr>
                  <td><%= order.hashid %></td>
                  <td><%= number_to_currency(order.total, unit: ENV['CURRENT_CURRENCY']) %></td>
                  <% if ENV['CURRENT_DIGITAL_CURRENCY'].present? %>
                  <td><%= "#{ENV['CURRENT_DIGITAL_CURRENCY']} #{order.try(:payment_transaction).try(:amount)}"%></td>
                  <% end %>
                  <td><%= t "defaults.#{order.status}" %></td>
                  <td><%= l(order.expire_at, format: :short) if order.expire_at.present? %></td>
                  <td><%= l(order.paid_at, format: :short) if order.paid_at.present? %></td>
                  <td>
                    <%= link_to t('defaults.details'), backoffice_order_path(order) %>
                  </td>
                  <% if order.try(:payment_transaction) && !order.paid_at %>
                  <td> <%= link_to t('defaults.pay'), backoffice_payment_transaction_path(id: order.try(:payment_transaction).id) %> </td>
                  <% end %>
                </tr>
              <% end %>
              <% if @orders.empty? %>
                <tr>
                  <td colspan="8" class="text-center"><%= t('views.backoffice.orders.index.no_data') %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>
