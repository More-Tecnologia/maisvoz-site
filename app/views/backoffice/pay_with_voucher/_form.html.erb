<%= simple_form_for(form, url: url, method: method, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.input :voucher_code, label: 'Voucher', input_html: { value: @voucher.code, readonly: true } %>
  <%= f.input :order_id, label: 'ID do Pedido' %>
  <%= f.input :password %>
  <%= f.button :button, t("defaults.pay"), data: { disable_with: "<i class='fa fa-spinner fa-spin'></i> Processando...".html_safe } %>
<% end %>
