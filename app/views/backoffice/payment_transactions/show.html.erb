<%= stylesheet_link_tag 'https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css',
                        integrity: 'sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU',
                        crossorigin: 'anonymous' %>
<%= stylesheet_link_tag 'click-tok-theme/app' %>

<div class="row">
  <div class="col-sm-12">
    <div class="card-box">
      <div class="row">
        <div class="col-sm-12">
          <span class="pull-right" style="float: right;"> <%= @payment_transaction.order.hashid %> </span>
        </div>
      </div>
      <% unless @payment_transaction.order.order_items.first.product.deposit? %>
      <div class="row">
        <div class="col-lg-12">
          <table class="table table-bordered cart-table">
            <thead class="cart-table__title">
              <tr>
                <th></th>
                <th><%= Product.human_attribute_name(:name) %></th>
                <th><%= OrderItem.human_attribute_name(:quantity) %></th>
                <th><%= OrderItem.human_attribute_name(:unit_price) %></th>
                <th><%= OrderItem.human_attribute_name(:total) %></th>
              </tr>
            </thead>
            <tbody class="cart-table__body">
              <% @payment_transaction.order.order_items.each do |order_item| %>
                <tr>
                  <td><%= cl_image_tag(order_item.product.main_photo_path, { size: '150x150', class: 'thumb-md' }) %></td>
                  <td><%= order_item.name %></td>
                  <td><%= order_item.quantity %></td>
                  <td><%= number_to_currency(order_item.unit_price, unit: ENV['CURRENT_CURRENCY']) %></td>
                  <td><%= number_to_currency(order_item.total, unit: ENV['CURRENT_CURRENCY']) %></td>
                </tr>
              <% end %>
              <% if @payment_transaction.order.order_items.empty? %>
                <tr>
                  <td colspan="6" class="text-center"><%= t('views.backoffice.cart.show.no_data') %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
      <% end %>
      <div class="row m-t-30">
        <% if @payment_transaction.order.shipping > 0 %>
        <div class="col-md-12">
          <div class="col-md-1">
            <h3> <%= Order.human_attribute_name(:shipping) %> </h3>
          </div>
          <div class="col-md-11">
            <h3> <%= number_to_currency(@payment_transaction.order.shipping,
                                        unit: ENV['CURRENT_CURRENCY']) %> </h3>
          </div>
        </div>
        <% end %>
        <div class="col-md-12" style="margin-bottom: 40px;">
          <h4>
            <i class="fas fa-dollar-sign"></i>
            <%= number_to_currency(@payment_transaction.order.total, unit: '') %>
            <br>
            <% if ENV['CURRENT_DIGITAL_CURRENCY'].present? %>
              <i class="fab fa-btc"></i>
              <%= format_digital_currency(@payment_transaction.amount) %>
            <% end %>
          </h4>
        </div>
      </div>
      <div class='row text-center'>
        <div class='col-md-12'>
          <h5 class="purple">
            <%= t('backoffice.payment_transactions.show.transfer_note_html', value: format_digital_currency(@payment_transaction.amount)) %>
          </h5>
          <h6 class='text-click pink'>
            <i class="fas fa-exclamation-triangle"></i>
            <%= t('backoffice.payment_transactions.show.transfer_rate_warning_html') %>
          </h6>
        </div>
      </div>
      <div class='row text-center'>
        <span class="text-center">
          <%= render_qr_code_img(@payment_transaction.wallet_address) if @payment_transaction.wallet_address.present? %>
        </span> <br>
        <span class="purple text-center" id="wallet-address"><%= @payment_transaction.wallet_address %></span>
      </div>
      <div class="row text-center" style="margin-bottom: 100px;">
        <div class="col-sm-12">
          <%= copier_button(@payment_transaction.wallet_address, '#wallet-address') %>
        </div>
      </div>
    </div>
  </div>
</div>
