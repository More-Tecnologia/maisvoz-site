<div class="row m-b-23">
  <div class="col-xs-6">
    <h4 class="page-title">
      <i class="fas fa-chevron-right"></i>&nbsp;
      <%= t('views.backoffice.cart.show.title') %>
    </h4>
  </div>
  <div class="col-xs-3">
    <%= image_tag 'safe-purchase.png', size: '126x90',
                                       class: 'img img-responsive pull-right' %>
  </div>
  <div class="col-xs-3 m-t-10 text-right">
    <%= image_tag 'safe-site.png', size: '150x75',
                                   class: 'img img-responsive pull-right' %>
  </div>
</div>
<div class="row m-b-23">
  <div class="col-sm-6">
    <div>
      <span class="m-r-5"> <%= @product.hashid %> </span>
      <span> <%=  %> </span>
    </div>
    <h1> <strong> <%= @product.name %> </strong> </h1>
  </div>
  <div class="col-sm-6">
    <%= cl_image_tag(@product.main_photo_id, class: 'img img-responsive') %>
  </div>
</div>
<div class="row">
  <div class="col-xs-12">
    <h2 class="black m-b-0">
      <strong> <%= t('.purchase_resume') %> </strong>
    </h2>
    <hr style='height: 2px; background: #505458;' class="m-t-0">
    <table class="table black font-18">
      <thead style="font-weight: bold;">
        <th class="text-left black"> <%= OrderItem.human_attribute_name(:product_name) %> </th>
        <th class="text-right black"> <%= OrderItem.human_attribute_name(:value) %> </th>
      <thead
      <tbody>
        <tr>
          <td class="text-left black" > <%= @product.name %> </td>
          <td class="text-right black" id="total_item_price">
            <%= number_to_currency(@product.price_cents / 100.0) %>
          </td>
        </tr>
      </tbody>
    </table>
    <hr style='height: 1px; background: #505458;' class="m-b-0">
  </div>
</div>
<div class="row m-b-23">
  <div class="col-xs-12">
    <h2 class="black m-b-0 pull-left">
      <strong> <%= t('.total') %> </strong>
    </h2>
    <h2 class="black m-b-0 pull-right">
      <strong id="checkout_form_total"> <%= number_to_currency(@product.price_cents / 100.0) %> </strong>
    </h2>
  </div>
</div>
<div class="row text-center">
  <div class="col-xs-12">
    <%= link_to t('views.backoffice.cart.show.place_order'),
                backoffice_product_checkouts_path(product_id: @product.id),
                method: :post,
                class: 'btn btn-success btn-lg' %>
  </div>
</div>
