<%= stylesheet_link_tag 'click-tok-theme/store' %>
<%= javascript_include_tag 'click-tok-theme/shop' %>
<div class="main-box">
  <div class="nav-store">
    <a class="store-banner">
      <p>ADCASH</p>
    </a>
    <a class="store-banner">
      <p>JOGOS ONLINE</p>
    </a>
    <a class="store-banner">
      <p>CURSOS ONLINE</p>
    </a>
    <a class="store-banner">
      <p>PUBLICIDADE ONLINE</p>
    </a>
  </div>

  <div class="banner-img">
    <div class="banner-img__content-left">
      <p>ADCASH</p>
      <h1>INCREASE YOUR EARNINGS</h1>
      <a href="#" class="btn-active-account">Ative sua conta</a>
    </div>
    <div class="banner-img__content-right">
      <%= image_tag('nav-store/man.png') %>
    </div>
  </div>
  <div class="products-list">
    <% @products.each do |product| %>
        <div class="box">
          <div class="header-box" style="background: <%= product.details %>"></div>
          <div class="content-box">
          <div class="product-title">
             <%= product.name %>
          </div>
          <div class="content-mid">
            <div class="product-task">
            <span class="product-task-amount"> <%= product.task_per_day %></span>
              <%= t(:tasks_per_day) %>
            </div>
            <div class="product-desc">
            <span class="product-task-amount">
                <%= number_to_currency(product.earnings_per_campaign / 100.0, unit: ENV['CURRENT_CURRENCY'], precision: 2).gsub('USD ', '$') %>
              </span>
              <%= t(:earnings_by_campaign) %>
            </div>
          </div>

          <div class="product-price">
            <span><%= product.price.zero? ? t(:free) : number_to_currency(product.price, precision: 0).gsub('USD ', '$') %></span>
            <%= link_to backoffice_order_items_path(product: {id: product.hashid}), class: ' btn-buy',
                     method: :post do %>
                     <%= t(:buy) %>
            <% end %>
           </div>

          </div>
        </div>
    <% end %>
  </div>
</div>
