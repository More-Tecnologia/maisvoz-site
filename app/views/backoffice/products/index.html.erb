<!-- Page-Title -->
<div class="row">
  <div class="col-sm-12 m-b-23">
    <h4 class="page-title"><%= title t('views.backoffice.products.index.title', company_name: ENV['COMPANY_NAME']) %></h4>
  </div>
</div>

<div class="portfolioFilter">
  <%= link_to t('all'), backoffice_products_path %>
  <% Category.active.each do |category| %>
    <%= link_to category.name, q: { category_id_eq: category.id } %>
  <% end %>
</div>


<div class="row">
  <div class="m-b-15">

    <% @products.each do |product| %>
    <div class="col-sm-6 col-lg-3 col-md-4 mobiles">
      <div class="product-list-box thumb text-center">
        <%= link_to backoffice_product_path(product), class: 'image-popup' do %>
          <%= cl_image_tag(product.main_photo_id, { size: '150x150', class: 'thumb-img' }) %>
        <% end %>

        <% if current_user.admin? %>
        <div class="product-action">
          <%= link_to edit_backoffice_admin_product_path(product), class: 'btn btn-success btn-sm' do %>
            <i class="md md-mode-edit"></i>
          <% end %>
        </div>
        <% end %>

        <div>
          <h3 class="product-card__name" title="<%= product.name %>"><%= truncate(product.name, length: 20) %></h3>
          <h4 class="product-card__price"><%= number_to_currency product.price %></h4>
        </div>

      </div>
      <div class="product-card__btns">
        <%= link_to backoffice_product_path(product), class: 'btn product-card__btn text-center' do %>
          <i class="icon-plus"></i>
          <%= t('views.backoffice.products.index.details') %>
        <% end %>
        <%= link_to new_backoffice_product_checkout_path(product_id: product.hashid),
                    class: 'btn product-card__btn text-center' do %>
          <i class="icon-basket"></i>
          <%= t('views.backoffice.products.show.buy') %>
        <% end %>
      </div>
    </div>
    <% end %>

  </div>
</div>
<!-- End row -->
