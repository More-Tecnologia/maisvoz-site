<div class="content-page">
  <!-- Start content -->
  <div class="content">
    <div class="container">

      <!-- Page-Title -->
      <div class="row">
        <div class="col-sm-12">
          <h4 class="page-title"><%= t('views.backoffice.products.show.title') %></h4>
          <ol class="breadcrumb">
            <li>
              <a href="#"><%= t('app_name') %></a>
            </li>
            <li>
              <%= link_to t('views.backoffice.products.index.title'), backoffice_products_path %>
            </li>
            <li class="active">
              <%= t('views.backoffice.products.show.title') %>
            </li>
          </ol>
        </div>
      </div>

       <div class="row">
           <div class="col-xs-12">
               <div class="card-box product-detail-box">
                   <div class="row">
                       <div class="col-sm-4">
                           <div class="sp-wrap">
                               <a href="assets/images/products/big/1.jpg"><img src="assets/images/products/big/1.jpg" alt=""></a>
                           </div>
                       </div>

                       <div class="col-sm-8">
                           <div class="product-right-info">
                               <h3><b><%= @product.name %></b></h3>

                               <h2><b><%= number_to_currency @product.price %></b></h2>

                               <hr/>

                               <h5 class="font-600"><%= t('views.backoffice.products.show.description') %></h5>

                               <p class="text-muted"><%= @product.description %></p>

                               <div class="m-t-30">
                                  <%= simple_form_for @product, url: backoffice_order_items_path, method: :post do |f| %>
                                    <%= f.input :id, as: :hidden %>
                                    <button type="submit" class="btn btn-danger waves-effect waves-light">
                                      <span class="btn-label"><i class="fa fa-shopping-cart"></i></span><%= t('views.backoffice.products.show.buy') %>
                                    </button>
                                  <% end %>
                               </div>
                           </div>
                       </div>
                   </div>
                   <!-- end row -->

                   <div class="row m-t-30">
                       <div class="col-xs-12">
                           <h4><b><%= t('views.backoffice.products.show.specifications') %></b></h4>
                           <div class="table-responsive m-t-20">
                               <table class="table">
                                   <tbody>
                                       <tr>
                                           <td width="400">Sku</td>
                                           <td><%= @product.sku %></td>
                                       </tr>
                                       <tr>
                                           <td><%= Product.human_attribute_name('weight') %></td>
                                           <td><%= @product.weight %> grams</td>
                                       </tr>
                                       <tr>
                                           <td><%= Product.human_attribute_name('height') %></td>
                                           <td><%= @product.height %> cm</td>
                                       </tr>
                                       <tr>
                                           <td><%= Product.human_attribute_name('width') %></td>
                                           <td><%= @product.width %> cm</td>
                                       </tr>
                                       <tr>
                                           <td><%= Product.human_attribute_name('length') %></td>
                                           <td><%= @product.length %> cm</td>
                                       </tr>
                                       <tr>
                                           <td><%= Product.human_attribute_name('binary_score') %></td>
                                           <td><%= @product.binary_score %></td>
                                       </tr>
                                       <tr>
                                           <td><%= Product.human_attribute_name('advance_score') %></td>
                                           <td><%= @product.advance_score %></td>
                                       </tr>
                                   </tbody>
                               </table>
                           </div>
                       </div>
                   </div>


               </div> <!-- end card-box/Product detai box -->
           </div> <!-- end col -->
       </div> <!-- end row -->


        </div> <!-- container -->

    </div> <!-- content -->

</div>
