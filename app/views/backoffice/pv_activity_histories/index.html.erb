<!-- Page-Title -->
<div class="row">
  <div class="col-sm-12 m-b-23">
    <h4 class="page-title"><%= t('.title') %></h4>
  </div>
</div>


<div class="row">
  <div class="col-sm-12">
    <div class="card-box">
      <div class="row">
        <%= form_tag backoffice_pv_activity_histories_path, method: :get do %>
          <div class="col-md-4 form-group">
              <div class="row">
                <div class="col-md-4">
                  <label>Gerado de:</label>
                  <%= text_field_tag :created_at_gteq, params[:created_at_gteq], class: 'form-control', data: { provide: 'datepicker' } %>
                </div>
                <div class="col-md-4">
                  <label>Gerado at√©:</label>
                  <%= text_field_tag :created_at_lteq, params[:created_at_lteq], class: 'form-control', data: { provide: 'datepicker' } %>
                </div>
              </div>
          </div>
          <div class="col-md-12 m-b-30">
            <%= submit_tag 'Filtrar', class: 'btn btn-primary' %>
          </div>
        <% end %>
      </div>

      <div class="row">
        <div class="col-lg-12">
          <table class="table table-striped table-bordered table-hover m-0">

            <thead>
              <tr>
                <th>#</th>
                <th><%= PvActivityHistory.human_attribute_name(:order) %></th>
                <th><%= PvActivityHistory.human_attribute_name(:from) %></th>
                <th><%= PvActivityHistory.human_attribute_name(:dist) %></th>
                <th><%= PvActivityHistory.human_attribute_name(:kind) %></th>
                <th><%= PvActivityHistory.human_attribute_name(:amount) %></th>
                <th><%= PvActivityHistory.human_attribute_name(:balance) %></th>
                <th><%= PvActivityHistory.human_attribute_name(:created_at) %></th>
              </tr>
            </thead>
            <tfoot>
              <tr>
                <td colspan="7">Total</td>
                <td><strong><%= number_with_delimiter pv_activity_histories_sum %></strong></td>
              </tr>
            </tfoot>
            <tbody>
              <% pv_activity_histories.each do |pv_activity_history| %>
                <tr>
                  <th><%= pv_activity_history.hashid %></th>
                  <td>
                    <%= t('.invoice_no', id: pv_activity_history.order.hashid) %>
                  </td>
                  <td><%= pv_activity_history.order.user.username %> <%= pv_activity_history.order.user.career_kind && "(#{t(pv_activity_history.order.user.career_kind)})" %></td>
                  <td><%= pv_activity_history.height %></td>
                  <td><%= pv_activity_history.kind.upcase %></td>
                  <td><%= number_with_delimiter pv_activity_history.amount %></td>
                  <td><%= number_with_delimiter pv_activity_history.balance %></td>
                  <td><%= l(pv_activity_history.created_at, format: :short) %></td>
                </tr>
              <% end %>
              <% if pv_activity_histories.empty? %>
                <tr>
                  <td colspan="8" class="text-center"><%= t('.no_data') %></td>
                </tr>
              <% end %>
            </tbody>

          </table>

          <%= paginate pv_activity_histories %>

        </div>
      </div>
    </div>
  </div>
</div>
