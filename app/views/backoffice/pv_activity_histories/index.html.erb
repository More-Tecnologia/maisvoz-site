<!-- Page-Title -->
<div class="row">
  <div class="col-sm-12 m-b-23">
    <h4 class="page-title"><%= t('.title') %></h4>
  </div>
</div>


<div class="row">
  <div class="col-sm-12">
    <div class="card-box">
      <div class="row">
        <div class="col-lg-12">
          <table class="table table-bordered m-0">

            <thead>
              <tr>
                <th>#</th>
                <th><%= PvActivityHistory.human_attribute_name(:order) %></th>
                <th><%= PvActivityHistory.human_attribute_name(:from) %></th>
                <th><%= PvActivityHistory.human_attribute_name(:amount) %></th>
                <th><%= PvActivityHistory.human_attribute_name(:created_at) %></th>
              </tr>
            </thead>
            <tbody>
              <% pv_activity_histories.each do |pv_activity_history| %>
                <tr>
                  <th><%= pv_activity_history.id %></th>
                  <td>
                    <%= t('.invoice_no', id: pv_activity_history.order_id) %>
                  </td>
                  <td><%= pv_activity_history.order.user.username %></td>
                  <td><%= decorate_amount pv_activity_history.amount %></td>
                  <td><%= l(pv_activity_history.created_at, format: :short) %></td>
                </tr>
              <% end %>
              <% if pv_activity_histories.empty? %>
                <tr>
                  <td colspan="6" class="text-center"><%= t('.no_data') %></td>
                </tr>
              <% end %>
            </tbody>
          </table>

          <%= paginate pv_activity_histories %>

        </div>
      </div>
    </div>
  </div>
</div>
