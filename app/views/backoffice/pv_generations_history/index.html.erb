<!-- Page-Title -->
<div class="row">
  <div class="col-sm-12 m-b-23">
    <h4 class="page-title"><%= t('.title') %></h4>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <div class="card-box">
      <div class="row">
        <%= form_tag backoffice_admin_pv_activity_histories_path, method: :get do %>
          <div class="col-md-4 form-group">
            <label for="">Username:</label>
            <%= text_field_tag :username, params[:username], class: 'form-control' %>
          </div>
          <div class="col-md-12 m-b-30">
            <%= submit_tag 'Filtrar', class: 'btn btn-primary' %>
          </div>
        <% end %>
      </div>

      <div class="row">
        <div class="col-lg-12">
          <table class="table table-bordered m-0">

            <thead>
              <tr>
                <th>Geração</th>
                <th>PVG e PVA</th>
              </tr>
            </thead>
            <tbody>
              <% pv_activity_sum.each do |k, v| %>
                <tr>
                  <td><%= k - 1 %>˚</td>
                  <td><%= number_with_delimiter v %></td>
                </tr>
              <% end %>
            </tbody>
          </table>

        </div>
      </div>
    </div>
  </div>
</div>
