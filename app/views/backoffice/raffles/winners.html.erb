<%= stylesheet_link_tag 'click-tok-theme/raffles/winners' %>
<%= javascript_include_tag 'https://kit.fontawesome.com/4d5efdc352.js', defer: true %>
<%= render 'backoffice/shared/back_and_title', back_path: raffles_backoffice_stores_path,  page_title: t(:winners) %>
<div class="winners-card-container">
  <% @raffles.each do |raffle| %>
    <ul class="card-item">
      <li>
        <span class="draw-date"><%= raffle.draw_date %></span>
        <span class="draw-number">NÂº<%= raffle.id %></span>
        <p class="avatar-container">
          <img src="<%= raffle.winner.avatar.try(:fullpath) %>" class="avatar-image" />
        </p>
        <span class="winners-name"><%= raffle.winner.name %></span>
      </li>
      <li>
        <a class="draw-link" href="https://www.powerball.com/" target="_blank">Powerball - <%= raffle.draw_date.strftime("%b %d, %Y") %></a>
        <ul class="result-ticket-list">
          <%= render_lotto_list_item(raffle) %>
        </ul>
        <span class="wining-ticket-number"><%= format_winning_ticket(raffle) %><i class="fa-solid fa-trophy"></i></span>
      </li>
      <li>
      
        <%= link_to backoffice_raffles_ticket_path(raffle), class: "product-container" do %>
          <%= image_tag(raffle.path, class: 'product-image') %>
        <% end %>
        <%= link_to raffle.product.name, backoffice_raffles_ticket_path(raffle), class: "raffle-name" %>
      </li>
    </ul>
  <% end%>
</div>
