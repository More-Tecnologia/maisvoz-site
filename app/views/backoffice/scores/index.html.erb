<!-- Page-Title -->
<div class="row">
  <div class="col-sm-12 m-b-23">
    <h4 class="page-title"><%= t('.unilevel_title') %></h4>
  </div>
</div>

<%= render 'backoffice/scores/filters' %>

<div class="row">
  <div class="col-sm-12">
    <div class="card-box">
      <div class="row">
        <div class="col-lg-12">
          <table class="table table-striped table-bordered table-hover m-0">
            <thead>
              <tr>
                <th>#</th>
                <th><%= Score.human_attribute_name(:user) %></th>
                <th><%= Score.human_attribute_name(:spreader_user) %></th>
                <th><%= Score.human_attribute_name(:height) %></th>
                <th><%= Score.human_attribute_name(:score_type) %></th>
                <th><%= Score.human_attribute_name(:cent_amount) %></th>
                <th><%= Score.human_attribute_name(:order) %></th>
                <th><%= Score.human_attribute_name(:created_at) %></th>
              </tr>
            </thead>
            <tfoot>
              <tr>
                <td colspan="6">Total</td>
                <td colspan="2"><strong><%= number_with_delimiter(sum_cent_amount(@scores)) %></strong></td>
              </tr>
            </tfoot>
            <tbody>
              <%= amount_sum = sum_cent_amount(@scores) + @scores.first.try(:cent_amount).to_i %>
              <% @scores.each do |score| %>
                <tr>
                  <th><%= score.hashid %></th>
                  <td><%= score.spreader_user.username %> <%= score.from.career_kind && "(#{t(score.from.career_kind)})" %></td>
                  <td><%= score.height %></td>
                  <td><%= score.score_type.name %></td>
                  <td><%= number_with_delimiter score.cent_amount %></td>
                  <td><%= number_with_delimiter(amount_sum -= score.cent_amount) %></td>
                  <td><%= score.order.hashid %> %></td>
                  <td><%= l(score.created_at, format: :short) %></td>
                </tr>
              <% end %>
              <% if @scores.empty? %>
                <tr>
                  <td colspan="8" class="text-center"><%= t('.no_data') %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <%= paginate @scores %>
        </div>
      </div>
    </div>
  </div>
</div>
