<%= stylesheet_link_tag 'click-tok-theme/shared/login_register' %>
<%= javascript_include_tag 'click-tok-theme/shared/login_register', defer: true %>
<section class="modal-login-register login">
  <button class="modal-close-button">âœ•</button>
  <div class="modal-logo">
    <% if ActiveModel::Type::Boolean.new.cast(ENV['WHITELABEL']) %>
      <%= image_tag 'white-label-logo.png' %>
    <% else %>
      <%= image_tag 'logo.png' %>
    <% end %>
  </div>
  <div class="form-container">
  <ul class="form-menu">
    <li class="login-toggle-button form-title">
      <%= t('users.sessions.new.login') %>    
    </li>
    <li class="register-toggle-button form-title">
      <%= t('users.shared.links.sign_up') %>    
    </li>
  </ul>
    <div class="modal-login-container">
      <span class="form-title"><%= t('users.sessions.new.login') %></span>
      <span class="form-subtitle"><%= t('already_have_account') %></span>
      <form class="login-form">
        <label for="login-user" class="field-container">
          <input id="login-user" type="text" placeholder="<%= t('attributes.user') %>" />
        </label>
        <label for="login-password" class="field-container">
          <input id="login-password" type="password" placeholder="Senha" />
        </label>
        <%# <label for="keep-logged">
          <input id="keep-logged" type="checkbox" />
          Salvar acesso
        </label> %>
        <button type="submit">
          <%= t('users.sessions.new.login') %>
        </button>
      </form>
      <div class="form-links-container">
        <a href="#"><%= t('users.shared.links.forgot_password') %></a>
      </div>
    </div>    
    <div class="modal-register-container">
      <span class="form-title"><%= t('users.shared.links.sign_up') %></span>
      <span class="form-subtitle"><%= t('create_your_account') %></span>
      <form class="register-form">
        <select class="field-container" type="text" required>          
          <option value="" disabled selected><%= t(:select_country)%></option>
          <option>SOME COUNTRY</option>
        </select>            
        <label for="register-user" class="field-container">      
          <input id="register-user" type="text" placeholder="<%= t('attributes.user') %>" />
        </label>
        <label for="register-email" class="field-container">      
          <input id="register-email" type="email" placeholder="<%= t('attributes.email') %>" />
        </label>
        <label for="register-password" class="field-container">      
          <input id="register-password" type="password" placeholder="<%= t('attributes.password') %>" />
        </label>
        <label for="register-repeat-password" class="field-container">          
          <input id="register-repeat-password" type="password" placeholder="<%= t('attributes.password_confirmation') %>" />
        </label>    
        <button type="submit">
          <%= t('users.shared.links.sign_up') %>
        </button>
      </form>
    </div>
  </div>  
</section>
