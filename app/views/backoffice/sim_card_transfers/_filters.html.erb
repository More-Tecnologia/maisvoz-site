<div class="row">
  <div class="col-sm-12">
    <div class="panel panel-border panel-custom">
      <div class="panel-heading">
  			<h3 class="panel-title"><%= t(:filters) %></h3>
  		</div>
      <div class="panel-body">
        <%= search_form_for @q, url: backoffice_user_sim_card_transfers_path(current_user) do |f| %>
          <div class="form-group">
            <div class="row">
              <div class="col-md-2">
                <%= f.label t('attributes.user') %>
                <%= f.search_field :user_username_cont, class: 'form-control input-sm' %>
              </div>
              <div class="col-md-2">
                <%= f.label t('attributes.iccid') %>
                <%= f.search_field :iccid_eq, class: 'form-control input-sm' %>
              </div>
              <div class="col-md-2">
                <%= f.label t('helpers.from') %>
                <%= f.search_field :support_point_stock_out_at_gteq, class: 'form-control input-sm',
                                                                     data: { provide: 'datepicker' } %>
              </div>
              <div class="col-md-2">
                <%= f.label t('helpers.util') %>
                <%= f.search_field :support_point_stock_out_at_lteq, class: 'form-control input-sm',
                                                                     data: { provide: 'datepicker' } %>
              </div>
            </div>
          </div>
          <%= f.submit t('datagrid.form.search'), class: 'btn btn-default' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
