<%= stylesheet_link_tag 'click-tok-theme/stores/shared/banner' %>
<div class="store-banner-wrapper">
  <input type="radio" name="radio-btn" id="radio1" class="radioButton"  checked>
  <input type="radio" name="radio-btn" id="radio2" class="radioButton">
  <input type="radio" name="radio-btn" id="radio3" class="radioButton">
  <input type="radio" name="radio-btn" id="radio4" class="radioButton">
  <% i = 0 %>
  <%= 4.times do %>
    <% i += 1 %>  
    <div class="store-banner-container banner<%= i %>">
      <div class="store-banner-text">
        <span class="store-banner-pretext">
          <%= image_tag(badge_pretext_image, class: 'store-banner-pretext-icon') %>
          <%= pretext %>
        </span>
        <h4 class="store-banner-title">
          <%= title + i.to_s %>
        </h4>
        <span class="store-banner-description">
          <%= description %>
        </span>
        <div class="store-banner-footer">
          <p class="store-banner-footer-box">
            <span class="store-banner-value">
              <%= t(:store_raffle_price) %>
            </span>
            <span class="store-banner-value-number">
              <%= price %>
            </span>
          </p>
          <p class="store-banner-footer-box">
            <span class="store-banner-draw">
              <%= t(:store_raffle_draw) %>
            </span>
            <span class="store-banner-draw-date">
              <%= date %>
            </span>
          </p>
        </div>
      </div>  
      <div class="store-banner-picture-container">
        <%= image_tag(product_image, class: 'store-banner-img') %>   
      </div>
    </div>   
    <div class="navigation-manual">
      <label for="radio1" class="manual-btn"></label>
      <label for="radio2" class="manual-btn"></label>
      <label for="radio3" class="manual-btn"></label>
      <label for="radio4" class="manual-btn"></label>
    </div>
  <% end %>  
</div>
<%= javascript_include_tag('click-tok-theme/stores/shared/banner') %>
