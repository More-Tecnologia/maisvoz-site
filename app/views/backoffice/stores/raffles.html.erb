<%= stylesheet_link_tag 'click-tok-theme/stores/shared/index' %>
<%= stylesheet_link_tag 'click-tok-theme/stores/raffles' %>

<h3 class="page-title">Store</h3>
<%= render 'menu' %>
<%= render 'banner',  badge_pretext_image: "stores/badge.svg",
                      date: "13/04/2022",
                      description: @packages.last().short_description,
                      pretext: "Ãšltimos Numeros",
                      price: number_to_currency(@packages.last().price, unit: ENV['CURRENT_CURRENCY'], precision: 2).gsub('USD ', '$'),
                      product_image: @packages.last().raffle.path,                   
                      title: @packages.last().name 
                    %>
<section class="store-content store-raffles-container">
  <% @packages.each do |package| %>
    <div class="store-raffle-item">
      <%= image_tag(package.raffle.path, class: 'store-raffle-item-image') %>     
      <div class="store-raffle-item-info">
        <ul class="store-raffle-item-score">
          <li>
            <i><%= t(:store_raffle_available) %></i>
            <b><%= available_raffle_tickets_count(package.raffle) %></b>
          </li>
          <li>
            <i><%= t(:store_raffle_reserved)%></i>
            <b>00</b>
          </li>
          <li>
            <i><%= t(:store_raffle_paid) %></i>
            <b>00</b>
          </li>
        </ul>
        <h5><%= package.name %></h5>
        <p>
          <%= package.short_description %>
        </p>
        <div class="store-raffle-item-footer">
          <span><%= number_to_currency(package.price, unit: ENV['CURRENT_CURRENCY'], precision: 2).gsub('USD ', '$') %></span>
          <%= link_to backoffice_raffles_ticket_path(package.raffle) do %>       
            <button><%= t(:store_raffle__choose_numbers) %></button>
          <% end %>
        </div>
      </div>
    </div>      
  <% end %> 
</section>
