<!-- Page-Title -->
<div class="row">
  <div class="col-sm-12">
    <h4 class="page-title m-b-30"><%= t('.title') %></h4>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <div class="card-box">

      <div class="row">
        <%= form_tag backoffice_support_users_path, method: :get do %>
          <div class="col-md-3 form-group">
            <label for="">Username:</label>
            <%= text_field_tag :username, params[:username], class: 'form-control' %>
          </div>
          <div class="col-md-3 form-group">
            <label for="">Nome:</label>
            <%= text_field_tag :name, params[:name], class: 'form-control' %>
          </div>
          <div class="col-md-3 form-group">
            <label for="">CPF:</label>
            <%= text_field_tag :document_cpf, params[:document_cpf], class: 'form-control' %>
          </div>
          <div class="col-md-3 form-group">
            <label for="">Email:</label>
            <%= text_field_tag :email, params[:email], class: 'form-control' %>
          </div>
          <div class="col-md-3 form-group">
            <label for="">Tipo:</label>
            <%= select_tag :role, options_for_select(User.roles, params[:role]), class: 'form-control', include_blank: true %>
          </div>
          <div class="col-md-12 m-b-30">
            <%= submit_tag 'Filtrar', class: 'btn btn-primary' %>
            <%= link_to 'Limpar busca', backoffice_support_users_path, class: 'btn btn-danger' %>
          </div>
        <% end %>
      </div>

      <div class="row">
        <div class="col-lg-12">

          <table class="table table-striped table-bordered toggle-circle m-b-0">

            <thead>
              <tr>
                <th>#</th>
                <th><%= User.human_attribute_name(:username) %></th>
                <th><%= User.human_attribute_name(:name) %></th>
                <th><%= User.human_attribute_name(:main_document) %></th>
                <th><%= User.human_attribute_name(:active) %></th>
                <th><%= User.human_attribute_name(:binary_qualified) %></th>
                <th><%= User.human_attribute_name(:career_kind) %></th>
                <th><%= User.human_attribute_name(:created_at) %></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% users.each do |user| %>
                <tr>
                  <th><%= user.id %></th>
                  <td><%= link_to_user user %></td>
                  <td><%= user.pretty_name %></td>
                  <td><%= user.main_document %></td>
                  <td><%= user.activity %></td>
                  <td><%= user.qualification %></td>
                  <td class="text-primary"><%= user.pretty_career %></td>
                  <td><%= l user.created_at, format: :short %></td>
                  <td>
                    <%= link_to backoffice_support_user_path(user), title: 'Ver perfil', target: '_blank' do %>
                      <i class="fa fa-eye"></i>
                    <% end %>
                    <% if current_user.username == 'sistema' %>
                      <%= link_to masquerade_path(user), title: 'Logar como usuário' do %>
                        <i class="fa fa-user"></i>
                      <% end %>
                    <% end %>
                    <%= link_to backoffice_admin_bonus_entries_path(username: user.username), title: 'Histórico de Bônus', target: '_blank' do %>
                      <i class="fa fa-star"></i>
                    <% end %>
                    <%= link_to backoffice_admin_financial_entries_path('q[user_username_cont]' => user.username), title: 'Histórico Financeiro', target: '_blank' do %>
                      <i class="fa fa-dollar"></i>
                    <% end %>
                    <%= link_to backoffice_admin_pv_activity_histories_path(username: user.username), title: 'Histórico PV Atividade', target: '_blank' do %>
                      <i class="fa fa-plus-square"></i>
                    <% end %>
                    <%= link_to backoffice_admin_pv_histories_path(username: user.username), title: 'Histórico de PVs', target: '_blank' do %>
                      <i class="fa fa-clock-o"></i>
                    <% end %>
                    <%= link_to edit_backoffice_support_user_path(user), title: 'Editar usuário', target: '_blank' do %>
                      <i class="fa fa-pencil"></i>
                    <% end %>
                  </td>
                </tr>
              <% end %>
              <% if users.empty? %>
                <tr>
                  <td colspan="9" class="text-center"><%= t('.no_data') %></td>
                </tr>
              <% end %>
            </tbody>
          </table>

          <%= paginate users %>

        </div>
      </div>
    </div>
  </div>
</div>
