<script src="https://kit.fontawesome.com/b5d33f8ba4.js" crossorigin="anonymous"></script>
<%= simple_form_for([:backoffice, @ticket],
                    validate: true,
                    html: { class: 'form-horizontal',
                            multipart: true }) do |f| %>
  <div class="row">
    <div class="col-lg-2">
      <div class="m-b-20">
  	  	<%= f.label t('attributes.subject') %><br>
  	  	 <%= f.select :subject_id, active_subject_options,
                                   { class: 'form-control input-sm' } %>
	  	</div>
  	</div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <div class="m-b-10">
  	  	<%= f.label t('attributes.title') %><br>
  	  	<%= f.input :title, label: false %>
	  	</div>
  	</div>
  </div>
	<div class="row">
		<div class="col-lg-12">
      <div class="m-b-20">
				<%= f.input :body, as: :text, label: false %>
			</div>
      <%= f.file_field :files, multiple: true %>
		</div>
	</div>
	<br><br>
  <%= button_tag t(:create), class: 'btn btn-success',
               data: { disable_with: '<i class="fas fa-spinner fa-spin"></i>' } %>
  <%= link_to backoffice_tickets_path, class: 'btn btn-primary waves-effect waves-light' do %>
    <%= t('views.backoffice.tickets.index.return_to_tickets') %>
  <% end %>
<% end %>
