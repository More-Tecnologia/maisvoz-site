<!-- Page-Title -->
<div class="row">
  <div class="col-sm-12 m-b-23">
    <h4 class="page-title"><%= t('defaults.tickets') %></h4>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <%= render 'backoffice/admin/tickets/filters' %>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <div class="card-box">
      <div class="row">
        <div class="col-lg-12">
        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover m-0">
            <thead>
              <tr>
                <th>#</th>
                <th><%= Ticket.human_attribute_name(:subject) %></th>
                <th><%= Ticket.human_attribute_name(:user) %></th>
                <th><%= Ticket.human_attribute_name(:status) %></th>
                <th><%= t('backoffice.tickets.index.created_at') %></th>
                <th><%= t('backoffice.tickets.index.finished_at') %></th>
                <th><%= Ticket.human_attribute_name(:action) %></th>
              </tr>
            </thead>
            <tbody>
              <% if @tickets.length > 0 %>
                <% @tickets.each do |ticket| %>
                  <tr>
                    <td><%= ticket.hashid %></td>
                    <td><%= ticket.subject %></td>
                    <td><%= ticket.user.username %></td>
                    <td><%= ticket.status %></td>
                    <td><%= l(ticket.created_at, format: '%B %d, %Y' ) %></td>
                    <td><%= l(ticket.finished_at, format: '%B %d, %Y' ) if ticket.finished_at%></td>
                    <td><%= link_to t('backoffice.tickets.index.view'), ticket_path(ticket)%></td>
                  </tr>
                <% end %>
              <% else %>
                <tr>
                  <td colspan="50" class="text-center"><%= t('.no_data') %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
          </div>
          <div class="col-lg-12">
            <%= paginate @tickets %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
