<div class="row">
  <div class="col-sm-12 m-b-23"></div>
</div>

<div class="row">
  <div class="col-sm-12 m-b-23">
    <%= link_to backoffice_tickets_path, class: 'btn btn-primary waves-effect waves-light' do %>
      <%= t('views.backoffice.tickets.index.return_to_tickets') %>
    <% end %><br><br>
    <p>
      <%= "#{t('views.backoffice.tickets.show.ticket_id')}:" %>&nbsp
      <%= "#{@ticket.id}" %>
      &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
      <%= "#{t('views.backoffice.tickets.show.subject')}:" %>&nbsp
      <%= "#{t("defaults.#{@ticket.subject.name.downcase.gsub(/\s/, '_')}")}" %>
      &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
      <%= "#{t('backoffice.tickets.index.status')}:" %>&nbsp
      <%= t(@ticket.status) %>
      &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
      <%= "#{t('defaults.user')}:" %>&nbsp
      <%= "#{@ticket.user.username}" %>
      &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
      <%= "#{t('defaults.attendant')}:" %>&nbsp
      <%= "#{@ticket.attendant_user.username}" if @ticket.attendant_user %>
      <% "-" if @ticket.attendant_user.nil? %>
    </p>
  </div>
</div>
<% if @ticket.status != 'finished' %>
  <div class="row">
    <div class="col-sm-12 m-b-23">
      <div class="card-box">
        <%= render partial: 'interaction_form' %>
      </div>
    </div>
  </div>
<% end %>

<% @ticket.interactions.with_attached_files.includes(:user).order(created_at: :desc).each do |interaction| %>
  <p>
    <%= "#{l(interaction.created_at, format: :long)}," if interaction.created_at %>&nbsp
    <%= "#{t('defaults.by')} #{interaction.user.username}" %>&nbsp
  </p>
  <div class="row">
    <div class="col-sm-12 m-b-23">
      <div class="card-box">
          <div class="row">
            <div class="col-lg-12">
              <div class="m-b-20">
                 <text readonly>
                    <%= interaction.body %>
                  </text>
              </div>
              <% if interaction.files.count > 0 %>
                <% interaction.files.each do |file| %>
                  <a target="_blank" href=<%= url_for(file) %>>
                    <i class="fas fa-image"></i>
                    &nbsp<%= file.filename.to_s %>&nbsp
                  </a>&nbsp&nbsp&nbsp&nbsp
                <% end %>
                <br>
              <% end %>
            </div>
          </div>
      </div>
    </div>
  </div>
<% end %>

<p>
  <%= "#{l(@ticket.created_at, format: :long)}," if @ticket.created_at %>&nbsp
  <%= "#{t('defaults.by')} #{@ticket.user.username}" %>
</p>
<div class="row">
  <div class="col-sm-12 m-b-23">
    <div class="card-box">
        <div class="row">
          <div class="col-lg-12">
            <div class="m-b-20">
               <text readonly>
                  <%= @ticket.body %>
                </text>
            </div>
            <% if @ticket.files.count > 0 %>
              <% @ticket.files.each do |file| %>
                <a target="_blank" href=<%= url_for(file) %>>
                  <i class="fas fa-image"></i>
                  &nbsp<%= file.filename.to_s %>&nbsp
                </a>&nbsp&nbsp&nbsp&nbsp
              <% end %>
              <br>
            <% end %>
          </div>
        </div>
    </div>
  </div>
</div>
