<%= simple_form_for(form, url: url, method: method, validate: true, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.input :to_username %>
  <%= f.input :amount %>
  <%= f.input :password %>
  <%= f.button :button, t("defaults.#{method}"), data: { disable_with: "<i class='fa fa-spinner fa-spin'></i> Saving...".html_safe } %>
<% end %>
