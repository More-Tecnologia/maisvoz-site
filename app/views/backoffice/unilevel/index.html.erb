<!-- Page-Title -->
<div class="row">
  <div class="col-sm-12 m-b-23">
    <h4 class="page-title"><%= t('.title') %></h4>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <div class="card-box">
      <div class="row">
        <div class="col-lg-12">
          <% if @unilevel_nodes.any? %>
            <div class='table table-responsive'>
              <table class="table table-hover table-condensed">
                <thead>
                  <tr>
                    <th> </th>
                    <th> <%= t('attributes.generation') %> </th>
                    <th> <%= t('attributes.username') %>   </th>
                    <th> <%= t('attributes.active') %>     </th>
                    <th> <%= t('attributes.career') %>     </th>
                    <th> <%= t('attributes.binary_position') %> </th>
                  </tr>
                </thead>
                <tbody>
                  <%= render @unilevel_nodes %>
                </tbody>
            </table>
          </div>
          <% else %>
            <div class="alert alert-warning">
              <%= t('.no_binary_node') %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
