<div class="content-page">
  <!-- Start content -->
  <div class="content">
    <div class="container">

      <!-- Page-Title -->
      <div class="row">
        <div class="col-sm-12">
          <h4 class="page-title"><%= t('.title') %></h4>
          <p class="text-muted page-title-alt"><%= t('.subtitle') %></p>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-12">
          <div class="card-box">
            <div class="row">
              <div class="col-lg-12">

                <table class="table table-bordered">
                  <thead>
                    <th>1ยบ <%= t('.generation') %></th>
                    <% unilevel.each do |level| %>
                      <th><%= level[:sponsor] %></th>
                    <% end %>
                  </thead>
                  <% max_generation.times do |i| %>
                    <tr data-toggle="collapse" data-target="#accordion_<%= i %>" class="clickable">
                      <td><%= i + 2 %>ยบ <%= t('.generation') %></td>
                      <% unilevel.each do |level| %>
                        <td><%= level[:generations][i].present? ? level[:generations][i][:count] : 0 %></td>
                      <% end %>
                    </tr>
                    <tr id="accordion_<%= i %>" class="collapse warning">
                      <td></td>
                      <% unilevel.each do |level| %>
                        <td><%= level[:generations][i].present? ? level[:generations][i][:sponsors].join(', ') : '-' %></td>
                      <% end %>
                    </tr>
                  <% end %>
                </table>

              </div>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>
