<!-- Page-Title -->
<div class="row">
  <div class="col-sm-12 m-b-23">
    <h4 class="page-title"><%= t('backoffice.scores.index.title.unilevel') %></h4>
  </div>
</div>

<%= render 'filters' %>

<div class="row">
  <div class="col-sm-12">
    <div class="card-box">
      <div class="row">
        <div class="col-lg-12">
          <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover m-0">
              <thead>
                <tr>
                  <th>#</th>
                  <th><%= Score.human_attribute_name(:user) %></th>
                  <th><%= Score.human_attribute_name(:spreader_user) %></th>
                  <th><%= Score.human_attribute_name(:height) %></th>
                  <th><%= Score.human_attribute_name(:score_type) %></th>
                  <th><%= Score.human_attribute_name(:cent_amount) %></th>
                  <th><%= Score.human_attribute_name(:order) %></th>
                  <th><%= Score.human_attribute_name(:created_at) %></th>
                </tr>
              </thead>
              <tfoot>
                <tr>
                  <td colspan="6">Total</td>
                  <td colspan="2"><strong><%= number_with_delimiter(sum_cent_amount(@scores)) %></strong></td>
                </tr>
              </tfoot>
              <tbody>
                <% @scores.each do |score| %>
                  <tr>
                    <th><%= score.try(:hashid) %></th>
                    <td><%= score.try(:user).try(:username) %></td>
                    <td><%= score.try(:spreader_user).try(:username) %></td>
                    <td><%= score.try(:height) %></td>
                    <td><%= score.try(:score_type).try(:name) %></td>
                    <td><%= number_with_delimiter score.try(:cent_amount) %></td>
                    <td><%= score.try(:order).try(:hashid) %></td>
                    <td><%= l(score.try(:created_at), format: :short) %></td>
                  </tr>
                <% end %>
                <% if @scores.empty? %>
                  <tr>
                    <td colspan="9" class="text-center"><%= t('.no_data') %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
          <%= paginate @scores %>
        </div>
      </div>
    </div>
  </div>
</div>
