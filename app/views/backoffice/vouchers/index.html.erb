<!-- Page-Title -->
<div class="row">
  <div class="col-sm-12 m-b-23">
    <h4 class="page-title"><%= t('defaults.my_vouchers') %></h4>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <div class="card-box">
      <div class="row">
        <div class="col-lg-12">
          <table class="table table-striped table-bordered table-hover m-0">
            <thead>
              <tr>
                <th> <%= Voucher.human_attribute_name(:voucher_code) %> </th>
                <th> <%= Voucher.human_attribute_name(:status) %> </th>
                <th> <%= Voucher.human_attribute_name(:voucher_order) %> </th>
                <th> <%= Voucher.human_attribute_name(:order_kind) %> </th>
                <th> <%= Voucher.human_attribute_name(:voucher_use_date) %> </th>
                <th width="1"></th>
              </tr>
            </thead>
            <tbody>
              <% vouchers.each do |voucher| %>
                <tr>
                  <th><%= voucher.code %></th>
                  <th><%= t(voucher.used?.to_s) %></th>
                  <th><%= voucher.order.hashid if voucher.order %></th>
                  <th><%= t(voucher.invoice_type) if voucher.invoice_type %></th>
                  <th><%= l(voucher.used_at, format: '%B %d, %Y' ) if voucher.used_at %></th>
                  <th><%= link_to t('helpers.use_voucher'),
                                  backoffice_pay_with_voucher_path(voucher),
                                  class: 'btn btn-sm btn-primary' unless voucher.used? %></th>
                </tr>
              <% end %>
              <% if vouchers.empty? %>
                <tr>
                  <td colspan="50" class="text-center"> <%= t('helpers.no_data') %> </td>
                </tr>
              <% end %>
            </tbody>
          </table>

        </div>
      </div>
    </div>
  </div>
</div>
