<!-- Page-Title -->
<div class="row">
  <div class="col-sm-12 m-b-23">
    <h4 class="page-title">Meus Vouchers</h4>
  </div>
</div>

<div class="row">
  <div class="col-sm-8 col-sm-offset-2">
    <div class="card-box">
      <div class="row">
        <div class="col-lg-12">

          <table class="table table-striped table-bordered table-hover m-0">

            <thead>
              <tr>
                <th>Código</th>
                <th>Usado?</th>
                <th>ID fatura</th>
                <th>Tipo de Fatura</th>
                <th>Data e hora do uso</th>
              </tr>
            </thead>
            <tbody>
              <% vouchers.each do |financial_entry| %>
                <tr>
                  <th><%= financial_entry.code %></th>
                  <th><%= financial_entry.used? ? 'Sim' : 'Não' %></th>
                  <th><%= financial_entry.order_id %></th>
                  <th><%= financial_entry.invoice_type %></th>
                  <th><%= financial_entry.used_at %></th>
                </tr>
              <% end %>
              <% if vouchers.empty? %>
                <tr>
                  <td colspan="5" class="text-center">Você não adquiriu vouchers ainda</td>
                </tr>
              <% end %>
            </tbody>
          </table>

        </div>
      </div>
    </div>
  </div>
</div>
