<%= simple_form_for(form, url: url, method: method, html: { class: 'form-horizontal' }) do |f| %>
  <div data-withdraw-simulator="true" data-fee="<%= AppConfig.get(:withdrawal_fee) %>">
    <%= f.input :amount do %>
      <div class="input-group">
        <span class="input-group-addon"><i class="fa fa-dollar"></i></span>
        <%= f.input_field :amount, class: "form-control autonumber", value: form.amount, data: { input: true, autonumeric: { aSep: '.', aDec: ',' } } %>
      </div>
    <% end %>
    <ul class="list-unstyled w-list m-b-30">
      <% fee = form.amount ? form.amount.to_f * AppConfig.get(:withdrawal_fee).to_f : 0 %>
      <li><b><%= t('.fees') %>:</b> $ <span data-fee-text><%= fee %></span> </li>
      <li><b><%= t('.total') %>:</b> $ <span data-total-text><%= form.amount ? form.amount.to_f - fee : 0 %></span> </li>
    </ul>
    <%= f.button :button, t("defaults.#{method}"), data: { disable_with: "<i class='fa fa-spinner fa-spin'></i> Saving...".html_safe } %>
  </div>
<% end %>
