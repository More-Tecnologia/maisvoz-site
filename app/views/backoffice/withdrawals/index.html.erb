<div class="content-page">
  <!-- Start content -->
  <div class="content">
    <div class="container">

      <!-- Page-Title -->
      <div class="row">
        <div class="col-sm-12">
          <h4 class="page-title"><%= t('.title') %></h4>
          <p class="text-muted page-title-alt"><%= t('.subtitle') %></p>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-12">
          <div class="card-box">
            <div class="row">
              <div class="col-lg-12">

                <table class="table table-bordered table-hover m-0">

                  <thead>
                    <tr>
                      <th>#</th>
                      <th><%= User.human_attribute_name(:username) %></th>
                      <th><%= User.human_attribute_name(:name) %></th>
                      <th><%= FinancialEntry.human_attribute_name(:amount) %></th>
                      <th><%= FinancialEntry.human_attribute_name(:status) %></th>
                      <th><%= FinancialEntry.human_attribute_name(:created_at) %></th>
                    </tr>
                  </thead>
                  <tbody>
                    <% withdrawals.each do |withdraw| %>
                      <tr>
                        <th><%= withdraw.id %></th>
                        <th><%= withdraw.user.username %></th>
                        <th><%= withdraw.user.name %></th>
                        <th><%= number_to_currency withdraw.amount %></th>
                        <td><%= t withdraw.status %></td>
                        <td><%= l withdraw.created_at, format: :short %></td>
                      </tr>
                    <% end %>
                    <% if withdrawals.empty? %>
                      <tr>
                        <td colspan="6" class="text-center"><%= t('.no_data') %></td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>

                <%= paginate withdrawals %>

              </div>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>
