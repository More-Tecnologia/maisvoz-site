<!-- Page-Title -->
<div class="row">
  <div class="col-sm-12 m-b-23">
    <h4 class="page-title"><%= t('.title') %></h4>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <div class="card-box">
      <div class="row">
        <div class="col-lg-12">

          <table class="table table-bordered table-hover m-0">

            <thead>
              <tr>
                <th>#</th>
                <th><%= User.human_attribute_name(:username) %></th>
                <th><%= User.human_attribute_name(:name) %></th>
                <th><%= FinancialEntry.human_attribute_name(:net_amount) %></th>
                <th><%= FinancialEntry.human_attribute_name(:gross_amount) %></th>
                <th><%= FinancialEntry.human_attribute_name(:status) %></th>
                <th><%= FinancialEntry.human_attribute_name(:created_at) %></th>
              </tr>
            </thead>
            <tbody>
              <% withdrawals.each do |withdraw| %>
                <tr>
                  <th><%= withdraw.id %></th>
                  <th><%= withdraw.user.username %></th>
                  <th><%= withdraw.user.name %></th>
                  <th><%= number_to_currency withdraw.gross_amount %></th>
                  <th><%= number_to_currency withdraw.net_amount %></th>
                  <td><%= t withdraw.status %></td>
                  <td><%= l withdraw.created_at, format: :short %></td>
                </tr>
              <% end %>
              <% if withdrawals.empty? %>
                <tr>
                  <td colspan="7" class="text-center"><%= t('.no_data') %></td>
                </tr>
              <% end %>
            </tbody>
          </table>

          <%= paginate withdrawals %>

        </div>
      </div>
    </div>
  </div>
</div>
