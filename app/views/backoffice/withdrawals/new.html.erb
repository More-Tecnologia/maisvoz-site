<!-- Page-Title -->
<div class="row">
  <div class="col-sm-12 m-b-23">
    <h4 class="page-title"><%= t('.title') %></h4>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <div class="panel panel-default panel-border">
      <div class="panel-heading">
        <h3 class="panel-title"><%= t('.available_balance') %></h3>
      </div>
      <div class="panel-body">
        <ul class="list-unstyled w-list">
          <li><b><%= t('.available_balance') %>:</b> <%= number_to_currency current_user.pj? ? current_user.balance : current_user.available_balance %> </li>
          <li><b><%= t('defaults.withdrawal_fee') %>:</b> <%= number_to_currency(ENV['WITHDRAWAL_FEE']).to_f %></li>
        </ul>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <div class="card-box">
      <div class="row">
        <div class="col-lg-12">
          <div class="p-20">
            <% if withdraw_day %>
              <%= render partial: "form_#{current_user.registration_type}", locals: { form: form, url: backoffice_withdrawals_path, method: :post } %>
            <% else %>
              <%= render partial: 'withdraw_notice' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
