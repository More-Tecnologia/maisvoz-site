<!-- Page-Title -->
<div class="row">
  <div class="col-sm-12 m-b-23">
    <h4 class="page-title"><%= t('.title') %></h4>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <div class="panel panel-default panel-border">
      <div class="panel-heading">
        <h3 class="panel-title"><%= t('.available_balance') %></h3>
      </div>
      <div class="panel-body">
        <ul class="list-unstyled w-list">
          <li><b><%= t('.available_balance') %>:</b> <%= current_user.available_balance %> </li>
          <li><b><%= t('defaults.withdrawal_fee') %>:</b> <%= AppConfig.get(:withdrawal_fee).to_f * 100 %> %</li>
        </ul>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <div class="card-box">
      <div class="row">
        <div class="col-lg-12">
          <div class="p-20">
            <%= render partial: 'form', locals: { form: form, url: backoffice_withdrawals_path, method: :post } %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
