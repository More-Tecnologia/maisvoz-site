<%= stylesheet_link_tag 'flag-icon', media: 'all' %>
<header class="s-header">

    <a class="logo" href="/">
        <%= image_tag('logo.png') %>
    </a>

</header>
<section id="home" class="s-home page-hero target-section" data-parallax="scroll" data-image-src="<%= image_url('bg-home.jpg') %>" data-natural-width=3000 data-natural-height=2000 data-position-y=center>

    <div class="grid-overlay">
        <div></div>
    </div>

    <div class="home-content">

        <div class="row home-content__main">
            <h1>
              <%= t(:landing_page_title) %>
            </h1>

            <h3>
              <%= t(:landing_page_subtitle) %>
            </h3>

            <br><br><br><br>

            <div class="home-content__button">

                <%= link_to t('sign_up'), new_user_registration_path(sponsor: params[:sponsor]), class: 'btn btn--primary btn--large' %>


                <%= link_to t('login'), new_user_session_path(sponsor: params[:sponsor]), class: 'btn btn--large btn--default' %>

            </div>

        </div> <!-- end home-content__main -->

        <div class="home-content__scroll">
            <a href="#testimonials" class="scroll-link smoothscroll">
                Scroll
            </a>
        </div>

    </div> <!-- end home-content -->

</section> <!-- end s-home -->
<br>

<!-- about
      ================================================== -->
      <section id="about" class="s-about page-hero">
        <div class="overlay">


          <div class="row section-header bit-narrow" data-aos="fade-up">
              <div class="col-full">
                  <h1 class="display-1 text-center">
                  <%= t(:company_in_numbers, company_name: ENV['COMPANY_NAME'].to_s.upcase) %>
                  </h1>
              </div>
          </div> <!-- end section-header -->

          <div class="row bit-narrow">

              <div class="about-process process block-1-3 block-tab-full">

                  <div class="col-block item-process" data-aos="fade-up">
                      <div class="item-process__text text-center">
                          <%= image_tag('money-talks.png') %>
                          <h4 class="item-title">450</h4>
                          <p>
                           <%= t(:custody_money) %>
                          </p>
                      </div>
                  </div>
                  <div class="col-block item-process" data-aos="fade-up">
                      <div class="item-process__text text-center">
                          <%= image_tag('satify.png') %>
                          <h4 class="item-title">95%</h4>
                          <p>
                            <%= t(:satisfied_customers) %>
                          </p>
                      </div>
                  </div>
                  <div class="col-block item-process" data-aos="fade-up">
                      <div class="item-process__text text-center">
                        <%= image_tag('group.png') %>
                          <h4 class="item-title">100K</h4>
                          <p>
                          TOTAL CUSTOMERS
                          </p>
                      </div>
                  </div>

              </div> <!-- end process -->

              <hr>
          </div> <!-- end row -->
          <div class="row add-bottom">

            <div class="col-four">

                <h3><%= t(:latest_registrations) %></h3>

                <div class="table-responsive" style="overflow: auto; max-height: 45rem;" tabindex="1000">

                    <table>
                            <thead>
                            <tr>
                                <th><%= t(:username) %></th>
                                <th><%= t(:location) %></th>
                            </tr>
                            </thead>
                            <tbody>
                              <% @users.each do |user| %>
                                <tr>
                                  <td><%= hide_name(user.username) %></td>
                                  <td><span class="<%= 'flag-icon flag-icon-' + (user.country.try(:downcase) || 'uk') + ' flag-icon-squared' %>" ></span></td>
                                </tr>
                              <% end %>
                            </tbody>
                    </table>

                </div>

            </div>
            <br><br>
            <div class="col-six">
              <div class="mapouter"><div class="gmap_canvas"><iframe width="720" height="490" id="gmap_canvas" src="https://maps.google.com/maps?q=&t=&z=13&ie=UTF8&iwloc=&output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe><a href="https://ytify.com"></a></div><style>.mapouter{position:relative;text-align:right;height:490px;width:720px;}.gmap_canvas {overflow:hidden;background:none!important;height:490px;width:720px;}</style></div>
            </div>


        </div>
        </div>

      </section> <!-- end s-about -->

<!-- contact
================================================== -->
<section id="contact" class="s-contact target-section">

        <div class="grid-overlay">
            <div></div>
        </div>

    <div class="row section-header narrow" data-aos="fade-up">
        <div class="col-full">
          <% if @sponsor %>
            <h3 class="subhead"><%= t(:sponsored_by) %></h3>
            <%= @sponsor.decorate.avatar_image_tag %>
            <h1 class="display-1"><%= @sponsor.name %></h1>
          <% end %>
          <p class="contact-email">
              <a href="mailto:#0"><%= @sponsor ? @sponsor.email : ENV['SANDBOX_EMAIL'] %></a>
          </p>
        </div>
    </div> <!-- end section-header -->

    <div class="row contact-main" data-aos="fade-up">
        <div class="col-full">
            <p class="welcome-msg">
              <% if @sponsor %>
                <%= t(:register_thanks) %><br>
                <%= t(:jorney_together) %>
              <% else %>
                <%= t(:welcome_message_landing_page, company_name: ENV['COMPANY_NAME'].to_s.upcase) %>
              <% end %>
            </p>
        </div>
    </div>

</section> <!-- end s-contact -->


<!-- footer
================================================== -->
<%= render 'layouts/public/footer' %>


<!-- Java Script
================================================== -->
<%= javascript_include_tag "landing_page/jquery-3.2.1.min" %>
<%= javascript_include_tag "landing_page/plugins" %>
<%= javascript_include_tag "landing_page/main" %>
