<!DOCTYPE html>
<html>
  <head>
    <%= display_meta_tags site: 'Future Motors' %>
    <%= csrf_meta_tags %>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="fixed-left">
    <div id="wrapper">
      <%= render 'layouts/admin/topbar' %>
      <%= render 'layouts/admin/sidebar' %>
      <div class="content-page">
        <div class="content">
          <div class="container">
            <%= render 'layouts/flash-messages' %>
            <% if current_user.refused_verification? %>
              <div class="alert alert-danger"><%= current_user.document_refused_reason %></div>
            <% end %>
            <%= yield %>
          </div>
        </div>
      </div>
      <%= render 'layouts/admin/footer' %>
    </div>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= render 'layouts/gtag' %>
  </body>
</html>
