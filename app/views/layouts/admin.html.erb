<!DOCTYPE html>
<html>
  <head>
    <%= display_meta_tags site: 'Future Motors' %>
    <%= csrf_meta_tags %>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" integrity="sha384-gfdkjb5BdAXd+lj+gudLWI+BXq4IuLW5IT+brZEZsLFm++aCMlF1V92rMkPaX4PP" crossorigin="anonymous">
    <%= render 'layouts/shared/favicons' %>
  </head>

  <body class="fixed-left">
    <div id="wrapper">
      <%= render 'layouts/admin/topbar' %>
      <%= render 'layouts/admin/sidebar' %>
      <div class="content-page">
        <div class="content">
          <div class="container">
            <% if current_user.refused_verification? %>
              <div class="alert alert-danger"><%= current_user.document_refused_reason %></div>
            <% end %>
            <%= render 'layouts/flash-messages' %>
            <%= render 'layouts/notification' %>
            <%= yield %>
          </div>
        </div>
      </div>
      <%= render 'layouts/shared/footer' %>
    </div>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= render 'layouts/gtag' %>
  </body>
</html>
