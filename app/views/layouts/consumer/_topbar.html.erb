<ul class="list-unstyled topnav-menu float-right mb-0">
  <li class="dropdown notification-list">
      <a class="navbar-toggle nav-link">
          <div class="lines">
              <span></span>
              <span></span>
              <span></span>
          </div>
      </a>
  </li>

  <li class="notification-list">
    <%= link_to t('defaults.back_to_account'), back_masquerade_path(current_user),
                                               class: 'nav-link btn btn-danger' if user_masquerade? %>
  </li>

  <li class="notification-list">
    <a href="#" id="btn-fullscreen" class="nav-link waves-effect waves-effect waves-light">
      <i class="icon-size-fullscreen"></i>
    </a>
  </li>

  <li class="notification-list">
    <%= link_to shop_index_path, class: 'nav-link waves-effect text-success waves-light' do %>
      <i class="fa fa-home"></i> <%= t('shop') %>
    <% end %>
  </li>

  <li class="notification-list">
    <%= link_to backoffice_cart_path, class: 'nav-link waves-effect text-success waves-light' do %>
      <i class="icon-basket"></i>
      <span class="badge badge-xs badge-danger"><%= current_order.order_items.count %></span>
    <% end %>
  </li>

  <li class="notification-list">
    <a href="?locale=en" class="nav-link waves-effect waves-effect flag">
      <%= image_tag('countries/us.svg', height: 18) %>
    </a>
  </li>

  <li class="notification-list">
    <a href="?locale=es" class="nav-link waves-effect waves-effect flag">
      <%= image_tag('countries/es.svg', height: 18) %>
    </a>
  </li>

  <li class="notification-list">
    <a href="?locale=pt-BR" class="nav-link waves-effect waves-effect flag">
      <%= image_tag('countries/br.svg', height: 18) %>
    </a>
  </li>

  <li class="dropdown notification-list">
    <%= link_to current_user.username, class: 'nav-link dropdown-toggle nav-user mr-0 waves-effect',
                                       data: { toggle: 'dropdown' },
                                       role: :button,
                                       'aria-haspopup': false,
                                       'aria-expanded': false do %>
    <%= current_user.decorate.avatar_image_tag %>
      <span class='pro-user-name ml-1'>
        <%= current_user.username %>
        <i class="mdi mdi-chevron-down"></i>
      </span>
    <% end %>

    <div class="dropdown-menu dropdown-menu-right profile-dropdown">
        <div class="dropdown-header noti-title">
            <h6 class="text-overflow m-0"><%= t('defaults.welcome') %></h6>
        </div>

        <%= link_to edit_user_registration_path, class: 'dropdown-item notify-item' do %>
          <i class="fa fa-user m-r-10 text-custom"></i>
          <%= t('views.backoffice.topbar.edit_account') %>
        <% end %>

        <%= link_to edit_backoffice_documents_path, class: 'dropdown-item notify-item' do %>
          <i class="fa fa-cog m-r-10 text-custom"></i>
          <%= t('views.backoffice.topbar.documents') %>
        <% end %>

        <div class="dropdown-divider"></div>

        <%= link_to destroy_user_session_path, method: :delete,
                                               class: "dropdown-item notify-item" do %>
        <i class="fe-log-out text-danger"></i>
          <span> <%= t('views.backoffice.topbar.logout') %> </span>
        <% end %>
    </div>
  </li>
</ul>

<div class="logo-box">
  <a href="/" class="logo text-center">
    <span class="logo-lg">
      <%= image_tag('logo.png', height: 35) %>
    </span>
    <span class="logo-sm">
      <%= image_tag('logo.png', height: 24) %>
    </span>
  </a>
</div>

<ul class="list-unstyled topnav-menu topnav-menu-left m-0">
  <li class="dropdown d-none d-lg-block">
    <%= render 'users/link' if current_user.empreendedor? %>
  </li>
</ul>
