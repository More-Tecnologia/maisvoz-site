<style>
  * {
    margin: 0;
    padding: 0;
  }

  .mail-container {
    font-family: sans-serif;
    font-size: calc(0.6rem + 0.3vw);
    margin: 0 auto;
    max-width: 800px;
    width: 80%;
  }

  h1 {
    color: #00de28;
    font-size: 3.3em;
    font-weight: 800;
    margin: 2em 0 1em 0;
    text-align: center;
    text-transform: uppercase;
  }

  p {
    color: #888;
    font-size: 1.4em;
    margin: 0 0 1em 0;
  }

  h4 {
    font-size: 1.4em;
  }

  .product-image-container {
    width: 100%;
    display: flex;
    justify-content: flex-start;
  }

  .product-image {
    width: 80%;
    max-width: 300px;
    min-width: 100px;
  }

  hr {
    color: #00de28;
    margin-bottom: 1em;
  }
</style>
<div class="mail-container">
  <div class="image-container">
  </div>
  <h1>
    <%= t(:draw_date)%>
    <%= @raffle.draw_date.strftime("%d/%m/%Y") %>
  </h1>
  <p>
    <%= t(:hello)%>, <%= @user.name %>!
  </p>
  <p>
    <%= t(:order_made_message) %>
  </p>
  <div class="product-info">
    <span>ID: <%= @raffle.product.hashid %></span>
    <h4><%= @raffle.product.name %></h4>
  </div>
  <div class="product-image-container">
    <%= image_tag(@raffle.path, class: 'product-image') %>
  </div>
  <div class="logo-container">
  </div>
</div>
