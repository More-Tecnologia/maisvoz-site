<!-- Page-Title -->
<div class="row">
  <div class="col-sm-12">
    <h4 class="page-title"><%= title t('views.backoffice.products.index.title', company_name: ENV['COMPANY_NAME']) %></h4>
  </div>
</div>

<div class="row">
  <div class="m-b-15">

    <% products.each do |product| %>
    <div class="col-sm-6 col-lg-3 col-md-4 mobiles">
      <div class="product-list-box thumb text-center">
        <%= link_to shop_path(product, sponsor: params[:sponsor]), class: 'image-popup' do %>
          <%= cl_image_tag(product.main_photo_path, { size: '150x150', class: 'thumb-img' }) %>
        <% end %>

        <div>
          <h3 class="product-card__name" title="<%= product.name %>"><%= truncate(product.name, length: 24) %></h3>
          <h4 class="product-card__price"><%= number_to_currency product.price %></h4>
        </div>

      </div>
      <div class="product-card__btns">
        <%= link_to shop_path(product, sponsor: params[:sponsor]), class: 'btn product-card__btn text-center' do %>
          <i class="icon-plus"></i>
          <%= t('views.backoffice.products.index.details') %>
        <% end %>
        <%= link_to(new_user_registration_path(sponsor: params[:sponsor]), class: 'btn product-card__btn text-center') do %>
          <i class="icon-basket"></i>
          <%= t('views.backoffice.products.show.buy') %>
        <% end %>
      </div>
    </div>
    <% end %>

  </div>
</div>
<!-- End row -->
