<% set_meta_tags image_src: cloudinary_url(product.main_photo.try(:path)) %>

<!-- Page-Title -->
<div class="row">
  <div class="col-sm-12">
    <h4 class="page-title m-b-30"><%= title product.name %></h4>
  </div>
</div>

<div class="row">

   <div class="col-md-5 col-sm-5 col-lg-5 col-xs-12">
     <div class="product-detail" style="display: flex;">
       <div class="sp-loading">
          <%= image_tag 'sp-loading.gif' %>
          <br>CARREGANDO
       </div>

         <div class="sp-wrap">

           <div class="carousel">
              <div class="carousel-inner" role="listbox">
                <div class="item">
                  <a href="<%= cloudinary_url(product.main_photo.try(:path)) %>">
                    <%= cl_image_tag(product.main_photo_id, { size: '150x150' }) %>
                  </a>
                </div>
                <% product.photos.each do |cl| %>
                  <div class="item">
                    <a href="<%= cloudinary_url(cl.path) %>">
                      <%= cl_image_tag(cl.public_id, { size: '150x150' }) %>
                    </a>
                  </div>
                <% end %>
              </div>
           </div>

         </div>
      </div>
   </div>

   <div class="col-md-7 col-sm-7 col-xs-12 col-lg-7">
      <div class="product-detail">
         <h3><b><%= product.name %></b></h3>

         <h2><b><%= number_to_currency product.price %></b></h2>
         <h4>PONTUAÇÃO: <%= product.binary_score %></h4>

         <div class="m-t-30">
            <%= link_to(new_user_registration_path(sponsor: sponsor_from_username(params)), class: 'btn btn-primary waves-effect waves-light') do %>
              <span class="btn-label"><i class="fa fa-shopping-cart"></i></span>
              <%= t('views.backoffice.products.show.buy') %>
            <% end %>
         </div>

         <hr>

          <div class="row">
            <div class="col-md-6">
              <h4><b><%= t('views.backoffice.products.show.specifications') %></b></h4>
              <div class="table-responsive m-t-20">
                <table class="table">
                  <tbody>
                    <tr>
                      <td width="400">Quantidade</td>
                      <td><%= product.quantity %></td>
                    </tr>
                    <tr>
                      <td><%= Product.human_attribute_name('weight') %></td>
                      <td><%= product.weight %> grams</td>
                    </tr>
                    <tr>
                      <td><%= Product.human_attribute_name('height') %></td>
                      <td><%= product.height %> cm</td>
                    </tr>
                    <tr>
                      <td><%= Product.human_attribute_name('width') %></td>
                      <td><%= product.width %> cm</td>
                    </tr>
                    <tr>
                      <td><%= Product.human_attribute_name('length') %></td>
                      <td><%= product.length %> cm</td>
                    </tr>
                    <tr>
                      <td><%= Product.human_attribute_name('binary_score') %></td>
                      <td><%= product.binary_score %></td>
                    </tr>
                    <tr>
                      <td><%= Product.human_attribute_name('advance_score') %></td>
                      <td><%= product.advance_score %></td>
                    </tr>
                    <tr>
                      <td width="400">Sku</td>
                      <td><%= product.sku %></td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>
            <div class="col-md-6">
              <h4><b><%= t('views.backoffice.products.show.description') %></b></h4>
              <p class="text-muted"><%= simple_format(product.description) %></p>
              <% description(product.short_description || product.description) %>
            </div>
          </div>
       </div>
   </div>

</div>
<!-- end row -->

<script type="text/javascript">
    // wait for images to load
    window.onload = function() {
      $('.sp-wrap').smoothproducts();
    };
</script>
