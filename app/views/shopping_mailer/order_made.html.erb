  <tr>
    <td style="padding:18px 0px 18px 0px;line-height:22px;text-align:inherit;"
        height="100%"
        valign="top"
        bgcolor="">
      <h2 style="text-align: center;">
        <span style="color:#A9A9A9;"> <%= t('user_mailer.welcome.call', name: @user.name) %> </span>
      </h2><br>
      <div style="color:#808080;font-size: 16px;text-indent: 30px;">
        <span>
          <%= t('.body', order_value: number_to_currency(@order.total), company_name: ENV['COMPANY_NAME']).html_safe %><br>
        </span>
