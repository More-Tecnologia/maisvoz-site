<%= content_for :body_class, 'login-page' %>
<div class="wrapper-page" id="wrapper-page-login">
  <div class="text-center register-logo">
    <%= image_tag 'logo.png' %>
  </div>
  <br>
  <div class=" card-box">
    <div class="panel-body">

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), class: 'form-horizontal m-t-20') do |f| %>
        <%= f.error_notification %>

        <div class="form-group">
          <%= f.label :login %>
          <%= f.input_field :login, autofocus: true , class: 'form-control', style: 'min-width: 100%;' %>
        </div>
        <div class="form-group">
          <%= f.label :password %>
          <%= f.input_field :password, class: 'form-control', style: 'min-width: 100%;'  %>
        </div>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>

        <div class="form-actions">
          <%= f.button :submit, t('.login'), class: 'btn-block text-uppercase' %>
        </div>
        <hr>

      <% end %>
      <%= render "users/shared/links" %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12 text-center">
      <%= render "users/shared/flags" %>
    </div>
  </div>
</div> 
