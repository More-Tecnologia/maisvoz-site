<%= content_for :body_class, 'login-page' %>

<div class="account-pages"></div>
<div class="clearfix"></div>
<div class="wrapper-page">
  <div class="text-center">
    <%= image_tag 'logo.png' %>
  </div>
  <br>
  <div class=" card-box">
    <div class="panel-heading">
      <h3 class="text-left"><%= title 'Login' %></h3>
    </div>

    <div class="panel-body">

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), class: 'form-horizontal m-t-20') do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :login, required: false, autofocus: true %>
          <%= f.input :password, required: false %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, t('.login'), class: 'btn btn-primary btn-block text-uppercase' %>
        </div>
        <hr>

      <% end %>
      <%= render "users/shared/links" %>
      <%= render "users/shared/flags" %>

    </div>
  </div>
  <div class="row">
    <div class="col-sm-12 text-center">
    </div>
  </div>
</div>
